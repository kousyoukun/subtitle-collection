Dialogue: 0,0:01:20.09,0:01:29.10,Ten Phim,,0000,0000,0000,,CHÔN SỐNG
Dialogue: 0,0:05:48.59,0:05:50.47,Phim,,0000,0000,0000,,Này!
Dialogue: 0,0:05:53.68,0:05:56.06,Phim,,0000,0000,0000,,Này!
Dialogue: 0,0:06:05.19,0:06:06.78,Phim,,0000,0000,0000,,Cứu!
Dialogue: 0,0:06:07.28,0:06:10.32,Phim,,0000,0000,0000,,Cứu! Cứu!
Dialogue: 0,0:07:12.35,0:07:13.43,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,0:08:11.74,0:08:14.24,Phim,,0000,0000,0000,,Được rồi. Được rồi.
Dialogue: 0,0:10:22.37,0:10:25.87,Phim,,0000,0000,0000,,Được rồi. Là gì?\NSố nào nhỉ?
Dialogue: 0,0:10:27.37,0:10:29.04,Phim,,0000,0000,0000,,1-2-1...
Dialogue: 0,0:10:30.21,0:10:31.46,Phim,,0000,0000,0000,,Mẹ kiếp!
Dialogue: 0,0:10:42.72,0:10:44.14,Phim,,0000,0000,0000,,Đâu đây?
Dialogue: 0,0:11:07.71,0:11:10.21,Phim,,0000,0000,0000,,- 911 đây. Xin chờ máy.\N- Không! Chờ đã! Làm ơn!
Dialogue: 0,0:11:12.67,0:11:14.92,Phim,,0000,0000,0000,,- 911 nghe đây.\N- Tôi đang bị chôn.
Dialogue: 0,0:11:15.00,0:11:16.84,Phim,,0000,0000,0000,,Cô phải giúp tôi.\NTôi không thở được.
Dialogue: 0,0:11:16.92,0:11:19.30,Phim,,0000,0000,0000,,- Thưa ông?\N- Tôi bị chôn trong quan tài. Cứu với!
Dialogue: 0,0:11:19.38,0:11:20.89,Phim,,0000,0000,0000,,- Hãy cử người tới cứu tôi.\N- Xin bình tĩnh.
Dialogue: 0,0:11:20.97,0:11:22.85,Phim,,0000,0000,0000,,- Ông tên gì?\N- Paul. Paul Conroy.
Dialogue: 0,0:11:22.93,0:11:25.26,Phim,,0000,0000,0000,,Được rồi, ông Conroy.\NHiện ông đang ở đâu?
Dialogue: 0,0:11:25.35,0:11:27.18,Phim,,0000,0000,0000,,Tôi không biết.\NTrong một chiếc quan tài.
Dialogue: 0,0:11:27.27,0:11:29.35,Phim,,0000,0000,0000,,Không rõ ở đâu. Tôi sợ lắm.\NLàm ơn cứu tôi.
Dialogue: 0,0:11:29.44,0:11:31.52,Phim,,0000,0000,0000,,- Trong quan tài?\N- Phải.
Dialogue: 0,0:11:31.60,0:11:32.86,Phim,,0000,0000,0000,,Kiểu cũ, bằng gỗ.
Dialogue: 0,0:11:32.94,0:11:35.02,Phim,,0000,0000,0000,,- Ông đang ở nhà tang lễ?\N- Không.
Dialogue: 0,0:11:35.11,0:11:36.15,Phim,,0000,0000,0000,,Tôi không biết nữa.
Dialogue: 0,0:11:36.23,0:11:37.40,Phim,,0000,0000,0000,,{\i1}Thế ông gọi tôi bằng\Ncách nào vậy?{\i0}
Dialogue: 0,0:11:37.49,0:11:38.49,Phim,,0000,0000,0000,,Sao cơ?
Dialogue: 0,0:11:38.57,0:11:41.86,Phim,,0000,0000,0000,,{\i1}Nếu bị chôn trong quan tài,\Nthế ông gọi tôi từ đâu vậy?{\i0}
Dialogue: 0,0:11:41.95,0:11:43.74,Phim,,0000,0000,0000,,Bằng di động.\NCó một cái cũ trong quan tài.
Dialogue: 0,0:11:43.82,0:11:46.33,Phim,,0000,0000,0000,,- Di động của ông sao?\N- Phải.
Dialogue: 0,0:11:46.41,0:11:48.25,Phim,,0000,0000,0000,,Phải. Không không.\NKhông phải của tôi.
Dialogue: 0,0:11:48.33,0:11:49.62,Phim,,0000,0000,0000,,Nhưng đúng là tôi\Nđang gọi cô từ di động.
Dialogue: 0,0:11:49.71,0:11:52.38,Phim,,0000,0000,0000,,{\i1}Có di động trong quan tài\Nkhi ông leo vào sao?{\i0}
Dialogue: 0,0:11:52.46,0:11:53.96,Phim,,0000,0000,0000,,Phải. Gì cơ?
Dialogue: 0,0:11:54.88,0:11:57.55,Phim,,0000,0000,0000,,- Tôi không leo vào.\N- Vậy sao ông lại trong quan tài?
Dialogue: 0,0:11:57.63,0:11:59.34,Phim,,0000,0000,0000,,- Tôi bị đưa vào đây.\N- Trong quan tài?
Dialogue: 0,0:11:59.42,0:12:01.88,Phim,,0000,0000,0000,,Phải.\NLàm ơn cứu tôi!
Dialogue: 0,0:12:01.97,0:12:04.64,Phim,,0000,0000,0000,,- Và quan tài bị chôn?\N- Phải.
Dialogue: 0,0:12:04.72,0:12:06.97,Phim,,0000,0000,0000,,Tôi là lái xe tải.\NTôi là người Mỹ.
Dialogue: 0,0:12:08.02,0:12:09.39,Phim,,0000,0000,0000,,Trong này rất nóng.\NTôi không thở được.
Dialogue: 0,0:12:09.48,0:12:12.06,Phim,,0000,0000,0000,,- Làm ơn.\N- Ông biết vị trí của mình không?
Dialogue: 0,0:12:12.14,0:12:14.08,Phim,,0000,0000,0000,,Tôi nói rồi,\Nđâu đó ở I-rắc.
Dialogue: 0,0:12:14.08,0:12:15.06,Phim,,0000,0000,0000,,- Làm ơn cứu tôi.\N- I-rắc?
Dialogue: 0,0:12:15.06,0:12:17.94,Phim,,0000,0000,0000,,Phải. Tôi là lái xe tải,\Nngười Mỹ, làm cho CRT.
Dialogue: 0,0:12:18.03,0:12:20.36,Phim,,0000,0000,0000,,- Ông là lính?\N- Không, làm ơn hãy nghe tôi.
Dialogue: 0,0:12:20.44,0:12:22.24,Phim,,0000,0000,0000,,Tôi là lái xe tải.\NLà người Mỹ.
Dialogue: 0,0:12:22.32,0:12:26.12,Phim,,0000,0000,0000,,Thầu khoán dân sự ở Bát-đa.\NChúng tôi bị tấn công.
Dialogue: 0,0:12:26.20,0:12:30.04,Phim,,0000,0000,0000,,Và chúng...\NChúng bắn chúng tôi.
Dialogue: 0,0:12:30.54,0:12:32.75,Phim,,0000,0000,0000,,- Bắn ai cơ?\N- Tất cả các lái xe khác.
Dialogue: 0,0:12:32.83,0:12:35.00,Phim,,0000,0000,0000,,{\i1}Ông nói nó xảy ra ở I-rắc?\NĐất nước?{\i0}
Dialogue: 0,0:12:35.08,0:12:37.17,Phim,,0000,0000,0000,,Làm ơn nghe tôi được chứ?
Dialogue: 0,0:12:37.25,0:12:41.01,Phim,,0000,0000,0000,,Họ đưa tôi một số an toàn, nó\Ntrong ví tôi. Giờ thì mất rồi.
Dialogue: 0,0:12:41.09,0:12:45.22,Phim,,0000,0000,0000,,{\i1}Ông Conroy, đây là 911\Nở Youngstown, Ohio.{\i0}
Dialogue: 0,0:12:46.22,0:12:47.47,Phim,,0000,0000,0000,,- Ohio?\N- Vâng.
Dialogue: 0,0:12:47.56,0:12:49.83,Phim,,0000,0000,0000,,{\i1}Tôi không chắc làm sao\Nông gọi được đến đây...{\i0}
Dialogue: 0,0:12:49.83,0:12:51.31,Phim,,0000,0000,0000,,{\i1}nếu đang ở một nước khác,\Nnhưng nếu ông muốn,{\i0}
Dialogue: 0,0:12:51.31,0:12:52.77,Phim,,0000,0000,0000,,Tôi có thể kết nối\Ncho ông với văn phòng cảnh sát.
Dialogue: 0,0:12:52.85,0:12:55.44,Phim,,0000,0000,0000,,Cô không hiểu.\NThôi quên đi.
Dialogue: 0,0:13:03.90,0:13:07.20,Phim,,0000,0000,0000,,Được rồi. Được rồi.
Dialogue: 0,0:13:20.17,0:13:22.21,Phim,,0000,0000,0000,,Nhấc máy đi.
Dialogue: 0,0:13:24.55,0:13:25.80,Phim,,0000,0000,0000,,Nhấc máy đi.
Dialogue: 0,0:13:28.64,0:13:31.52,Phim,,0000,0000,0000,,{\i1}Cảm ơn đã gọi nhà Conroy.\NHiện chúng tôi không ở nhà.{\i0}
Dialogue: 0,0:13:31.60,0:13:34.69,Phim,,0000,0000,0000,,{\i1}Vui lòng để lại lời nhắn sau\Ntiếng bíp. Cảm ơn!{\i0}
Dialogue: 0,0:13:34.77,0:13:36.60,Phim,,0000,0000,0000,,Linda, em à, anh đây.
Dialogue: 0,0:13:36.69,0:13:40.32,Phim,,0000,0000,0000,,Anh cần em... liên hệ với\Nquân đội quốc gia ngay,
Dialogue: 0,0:13:40.40,0:13:41.82,Phim,,0000,0000,0000,,hoặc Lầu Năm Góc.
Dialogue: 0,0:13:41.90,0:13:46.49,Phim,,0000,0000,0000,,Bảo họ bọn anh bị tấn công\Nở tỉnh Diyala, ở Baqubah.
Dialogue: 0,0:13:46.57,0:13:48.66,Phim,,0000,0000,0000,,Họ cần tìm anh.\NĐược chứ?
Dialogue: 0,0:13:48.74,0:13:51.70,Phim,,0000,0000,0000,,Xin em đấy, em\Nphải báo họ tìm anh.
Dialogue: 0,0:13:59.75,0:14:01.00,Phim,,0000,0000,0000,,- Xin chào. Đây là Linda.\N- Không!
Dialogue: 0,0:14:01.09,0:14:04.22,Phim,,0000,0000,0000,,{\i1}Vui lòng để lại lời nhắn.\NCảm ơn và chúc một ngày tốt lành.{\i0}
Dialogue: 0,0:14:04.30,0:14:06.59,Phim,,0000,0000,0000,,Linda! Gọi lại cho\Nanh ngay, được chứ?
Dialogue: 0,0:14:06.68,0:14:08.97,Phim,,0000,0000,0000,,Gọi lại vào số này.\NCực khẩn cấp đấy.
Dialogue: 0,0:14:09.05,0:14:11.97,Phim,,0000,0000,0000,,Gọi cho anh theo số hiện\Ntrên màn hình, được chứ?
Dialogue: 0,0:14:12.06,0:14:15.06,Phim,,0000,0000,0000,,Anh không biết là\Nchuyện gì nhưng...
Dialogue: 0,0:14:15.73,0:14:17.48,Phim,,0000,0000,0000,,Anh bị chôn trong\Nmột cái hộp.
Dialogue: 0,0:14:18.48,0:14:20.27,Phim,,0000,0000,0000,,Anh bị chôn trong\Nmột cái hộp.
Dialogue: 0,0:14:22.44,0:14:24.32,Phim,,0000,0000,0000,,Anh không thở được.
Dialogue: 0,0:14:25.28,0:14:28.28,Phim,,0000,0000,0000,,Gọi anh ngay khi có thể.\NXin em đấy.
Dialogue: 0,0:15:18.33,0:15:20.08,Phim,,0000,0000,0000,,{\i1}Thành phố\Nvà bang nào ạ?{\i0}
Dialogue: 0,0:15:20.17,0:15:22.04,Phim,,0000,0000,0000,,Tôi không biết.\NFBI, nơi nào cũng được.
Dialogue: 0,0:15:22.13,0:15:24.55,Phim,,0000,0000,0000,,{\i1}Có thành phố cụ thể\Nnào không ạ?{\i0}
Dialogue: 0,0:15:24.63,0:15:26.76,Phim,,0000,0000,0000,,Nơi nào cũng được.\NGọi cho tôi đến FBI.
Dialogue: 0,0:15:26.84,0:15:28.84,Phim,,0000,0000,0000,,{\i1}Tôi có danh sách\NFBI ở Boston,{\i0}
Dialogue: 0,0:15:28.84,0:15:31.94,Phim,,0000,0000,0000,,{\i1}Chicago, New York,\NPhiladelphia...{\i0}
Dialogue: 0,0:15:32.72,0:15:33.76,Phim,,0000,0000,0000,,- New Haven...\N- Nó không quan trọng.
Dialogue: 0,0:15:33.85,0:15:35.51,Phim,,0000,0000,0000,,Nơi nào cũng được.\NChỉ cần kết nối cho tôi, làm ơn.
Dialogue: 0,0:15:35.60,0:15:37.31,Phim,,0000,0000,0000,,{\i1}Xin lỗi, thưa ông,\Nnhưng tôi không được phép làm thế.{\i0}
Dialogue: 0,0:15:37.39,0:15:41.52,Phim,,0000,0000,0000,,- Chicago! Được chưa? Chicago!\N- Không cần thô lỗ vậy, thưa ông.
Dialogue: 0,0:15:41.60,0:15:43.31,Phim,,0000,0000,0000,,{\i1}Làm ơn giữ máy.{\i0}
Dialogue: 0,0:15:43.40,0:15:45.69,Phim,,0000,0000,0000,,{\i1} Số ông yêu cầu...{\i0}
Dialogue: 0,0:15:45.77,0:15:48.19,Phim,,0000,0000,0000,,3-1-2
Dialogue: 0,0:15:48.69,0:15:51.70,Phim,,0000,0000,0000,,4-2-1
Dialogue: 0,0:15:52.41,0:15:56.58,Phim,,0000,0000,0000,,6-7-0-0
Dialogue: 0,0:15:57.54,0:16:01.33,Phim,,0000,0000,0000,,{\i1}có thể kết nối\Nvới phụ phí là 25 cent...{\i0}
Dialogue: 0,0:16:01.83,0:16:03.96,Phim,,0000,0000,0000,,{\i1}bằng cách nhấn\Nphím số 1.{\i0}
Dialogue: 0,0:16:09.17,0:16:10.97,Phim,,0000,0000,0000,,{\i1}Văn phòng Chicago.\NĐặc vụ Harris.{\i0}
Dialogue: 0,0:16:11.05,0:16:12.84,Phim,,0000,0000,0000,,- Phải FBI đó không?\N- Vâng, thưa ông.
Dialogue: 0,0:16:12.93,0:16:14.72,Phim,,0000,0000,0000,,Vâng, tôi gọi từ I-rắc.
Dialogue: 0,0:16:14.80,0:16:16.60,Phim,,0000,0000,0000,,Tôi bị chôn ở sa mạc nào đó.\NTôi cần anh giúp.
Dialogue: 0,0:16:16.68,0:16:18.02,Phim,,0000,0000,0000,,Từ từ đã.
Dialogue: 0,0:16:18.10,0:16:19.81,Phim,,0000,0000,0000,,- Ông ở I-rắc khi nào?\N- Bây giờ.
Dialogue: 0,0:16:19.89,0:16:21.64,Phim,,0000,0000,0000,,Giờ tôi đang ở đó.\NTôi là lái xe tải.
Dialogue: 0,0:16:21.73,0:16:24.15,Phim,,0000,0000,0000,,Tôi làm cho CRT.\NĐã ở đây 9 tháng rồi.
Dialogue: 0,0:16:24.23,0:16:27.48,Phim,,0000,0000,0000,,- Tên ông là gì?\N- Paul Conroy.
Dialogue: 0,0:16:27.57,0:16:28.86,Phim,,0000,0000,0000,,Paul Conroy.
Dialogue: 0,0:16:28.94,0:16:29.94,Phim,,0000,0000,0000,,Phải.
Dialogue: 0,0:16:30.03,0:16:32.11,Phim,,0000,0000,0000,,Được rồi, Paul,\Nhãy nói xem có chuyện gì.
Dialogue: 0,0:16:32.20,0:16:34.32,Phim,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:16:35.57,0:16:38.12,Phim,,0000,0000,0000,,Tôi và một đoàn hộ tống\Ncác lái xe khác
Dialogue: 0,0:16:38.20,0:16:41.08,Phim,,0000,0000,0000,,đang giao thiết bị bếp\Nđến một trung tâm cộng đồng.
Dialogue: 0,0:16:41.16,0:16:44.96,Phim,,0000,0000,0000,,Và rồi có vài đứa nhóc,\Nbắt đầu ném đá vào đoàn xe.
Dialogue: 0,0:16:45.04,0:16:50.13,Phim,,0000,0000,0000,,Rồi một quả IDE* phát nổ phía trước\Nvà làm nổ tung các xe khác.
Dialogue: 0,0:16:45.04,0:16:50.13,Phim,,0000,0000,0000,,*IDE: Bom tự chế cảm ứng.
Dialogue: 0,0:16:50.84,0:16:53.38,Phim,,0000,0000,0000,,Và rồi có nhiều tên\Nnhảy ra từ sau các ngôi nhà
Dialogue: 0,0:16:53.47,0:16:56.26,Phim,,0000,0000,0000,,và xả súng vào tất cả\Nmọi người trên đường.
Dialogue: 0,0:16:56.35,0:16:58.85,Phim,,0000,0000,0000,,- Ông có bị bắn không?\N- Tôi không biết.
Dialogue: 0,0:16:58.93,0:17:01.48,Phim,,0000,0000,0000,,Tôi không biết.\NTôi đi phía sau đoàn xe.
Dialogue: 0,0:17:01.56,0:17:03.77,Phim,,0000,0000,0000,,Tôi đoán là mình\Nbị đập đầu...
Dialogue: 0,0:17:03.85,0:17:07.44,Phim,,0000,0000,0000,,Bởi một tảng đá, rồi ngất đi.\NĐó là điều cuối cùng tôi nhớ.
Dialogue: 0,0:17:07.56,0:17:10.90,Phim,,0000,0000,0000,,Và khi tỉnh lại,\Nbị trói, trong quan tài.
Dialogue: 0,0:17:10.98,0:17:13.53,Phim,,0000,0000,0000,,- Ai đặt ông vào đó?\N- Có lẽ là những kẻ tập kích chúng tôi.
Dialogue: 0,0:17:13.61,0:17:15.53,Phim,,0000,0000,0000,,- Mấy đứa nhóc đó sao?\N- Không, không phải.
Dialogue: 0,0:17:15.61,0:17:18.37,Phim,,0000,0000,0000,,Mấy đứa nhóc đó\Nđã ném đá vào chúng tôi.
Dialogue: 0,0:17:18.45,0:17:22.20,Phim,,0000,0000,0000,,Còn mấy tên I-rắc này,\Ncó lẽ là quân phiến loạn.
Dialogue: 0,0:17:22.29,0:17:24.62,Phim,,0000,0000,0000,,Chúng... vụt lao ra\Nvà bắt đầu xả súng...
Dialogue: 0,0:17:24.71,0:17:25.97,Phim,,0000,0000,0000,,ngay trên phố.
Dialogue: 0,0:17:25.97,0:17:27.25,Phim,,0000,0000,0000,,{\i1}Tôi tưởng ông bảo\Ncúng không bắn mình.{\i0}
Dialogue: 0,0:17:27.25,0:17:28.50,Phim,,0000,0000,0000,,Chúng không! Tôi không biết!\NChúng bắn họ!
Dialogue: 0,0:17:28.59,0:17:30.21,Phim,,0000,0000,0000,,{\i1}Ông lên ngừng hét lên...{\i0}
Dialogue: 0,0:17:30.30,0:17:32.51,Phim,,0000,0000,0000,,Tôi hét vì các anh\Nkhông chịu nghe tôi!
Dialogue: 0,0:17:32.59,0:17:34.47,Phim,,0000,0000,0000,,Hãy cứu tôi!
Dialogue: 0,0:17:35.55,0:17:38.51,Phim,,0000,0000,0000,,{\i1}Được rồi. Tôi hiểu rồi.{\i0}
Dialogue: 0,0:17:39.43,0:17:43.23,Phim,,0000,0000,0000,,Các anh có thể bắt cuộc gọi?\NGPS hay gì đó ấy?
Dialogue: 0,0:17:44.23,0:17:46.81,Phim,,0000,0000,0000,,{\i1}Tại sao họ lại\Nkhông bắn ông?{\i0}
Dialogue: 0,0:17:48.40,0:17:51.98,Phim,,0000,0000,0000,,Tôi không biết gì cả.\NChúng không, tôi chỉ biết thế.
Dialogue: 0,0:17:53.07,0:17:56.20,Phim,,0000,0000,0000,,{\i1}Số bảo hiểm xã hội\Ncủa ông, Paul?{\i0}
Dialogue: 0,0:17:56.28,0:17:58.24,Phim,,0000,0000,0000,,Sao?
Dialogue: 0,0:17:58.32,0:18:00.87,Phim,,0000,0000,0000,,Sao chứ? Ai cần?
Dialogue: 0,0:18:00.95,0:18:02.66,Phim,,0000,0000,0000,,Tôi đang bị chôn vùi\Ntrong cái sa mạc chết tiệt này,
Dialogue: 0,0:18:02.75,0:18:04.54,Phim,,0000,0000,0000,,ai mà cần số bảo hiểm\Nxã hội của tôi chứ?
Dialogue: 0,0:18:04.62,0:18:07.75,Phim,,0000,0000,0000,,Tôi là công dân Mỹ.\NLàm ơn hãy cử người cứu tôi!
Dialogue: 0,0:18:07.83,0:18:10.25,Phim,,0000,0000,0000,,{\i1}Ông có biết...{\i0}
Dialogue: 0,0:18:10.34,0:18:12.34,Phim,,0000,0000,0000,,Gì cơ?\NTôi không nghe rõ.
Dialogue: 0,0:18:12.42,0:18:15.55,Phim,,0000,0000,0000,,Điều gì...\NKhoan đã. Không không...
Dialogue: 0,0:18:17.01,0:18:18.09,Phim,,0000,0000,0000,,Chết tiệt!
Dialogue: 0,0:18:20.80,0:18:21.89,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,0:18:29.77,0:18:30.77,Phim,,0000,0000,0000,,Thôi nào.
Dialogue: 0,0:18:50.88,0:18:52.67,Phim,,0000,0000,0000,,{\i1}Cảm ơn bạn đã gọi\Ntới 'Crestin, Roland and Thomas'.{\i0}
Dialogue: 0,0:18:52.75,0:18:53.96,Phim,,0000,0000,0000,,{\i1}Sao tôi có thể\Ntrực tiếp cuộc gọi của bạn?{\i0}
Dialogue: 0,0:18:54.05,0:18:55.92,Phim,,0000,0000,0000,,Ai đó. Tôi cần nói chuyện\Nvới ai đó ngay lập tức.
Dialogue: 0,0:18:56.01,0:18:58.13,Phim,,0000,0000,0000,,- Khẩn cấp.\N- Ai vậy?
Dialogue: 0,0:18:58.22,0:18:59.55,Phim,,0000,0000,0000,,Là Paul Conroy.
Dialogue: 0,0:18:59.64,0:19:01.85,Phim,,0000,0000,0000,,Là lái xe của các người.\NTôi gọi từ I-rắc.
Dialogue: 0,0:19:01.93,0:19:04.39,Phim,,0000,0000,0000,,- Đoàn xe bị tấn công.\N- Nếu là trường hợp khẩn,
Dialogue: 0,0:19:04.47,0:19:06.14,Phim,,0000,0000,0000,,{\i1}ông cần liên hệ với\Nsố an toàn mà ông đã được...{\i0}
Dialogue: 0,0:19:06.23,0:19:07.31,Phim,,0000,0000,0000,,Tôi biết điều đó.
Dialogue: 0,0:19:07.39,0:19:09.27,Phim,,0000,0000,0000,,Tôi không có nó nữa.\NNgười ta đã lấy nó.
Dialogue: 0,0:19:09.35,0:19:10.31,Phim,,0000,0000,0000,,{\i1}Ai đã lấy nó, thưa ông?{\i0}
Dialogue: 0,0:19:10.40,0:19:13.32,Phim,,0000,0000,0000,,Tôi không biết. Người\NI-rắc, tôi nghĩ vậy. Tôi bị ngất.
Dialogue: 0,0:19:13.40,0:19:15.65,Phim,,0000,0000,0000,,{\i1}Tôi sẽ kết nối\Nông với Alan Davenport.{\i0}
Dialogue: 0,0:19:16.65,0:19:18.99,Phim,,0000,0000,0000,,- Ai vậy?\N- Giám đốc nhân sự. Xin giữ máy.
Dialogue: 0,0:19:19.07,0:19:21.99,Phim,,0000,0000,0000,,Nhân sự? Không, không.\NChờ đã, chờ đã!
Dialogue: 0,0:19:25.08,0:19:27.37,Phim,,0000,0000,0000,,{\i1}Tại CRT, chúng tôi\Ngiao dịch với khách hàng{\i0}
Dialogue: 0,0:19:27.45,0:19:29.83,Phim,,0000,0000,0000,,{\i1}để cung cấp các giải pháp\Nhiệu quả và bền vững{\i0}
Dialogue: 0,0:19:29.92,0:19:33.54,Phim,,0000,0000,0000,,{\i1}cho các thách thức trong sự\Ntăng trưởng nóng của kinh tế toàn cầu.{\i0}
Dialogue: 0,0:19:33.63,0:19:34.88,Phim,,0000,0000,0000,,{\i1}Khi...{\i0}
Dialogue: 0,0:19:35.38,0:19:36.92,Phim,,0000,0000,0000,,{\i1}Bạn đang gọi\Ntới Alan Davenport,{\i0}
Dialogue: 0,0:19:37.01,0:19:39.51,Phim,,0000,0000,0000,,{\i1}Giám đốc nhân sự tại\N'Crestin, Roland and Thomas'.{\i0}
Dialogue: 0,0:19:39.59,0:19:41.34,Phim,,0000,0000,0000,,{\i1}Hãy để lại tên và\Nsố điện thoại sau tiếng bíp,{\i0}
Dialogue: 0,0:19:41.43,0:19:43.35,Phim,,0000,0000,0000,,{\i1} Và tôi sẽ gọi lại\Nngay khi có thể.{\i0}
Dialogue: 0,0:19:44.51,0:19:47.06,Phim,,0000,0000,0000,,Đây là Paul Conroy.\NTôi từ Hastings, Michigan.
Dialogue: 0,0:19:47.14,0:19:48.14,Phim,,0000,0000,0000,,Tôi là một lái xe của CRT.
Dialogue: 0,0:19:48.23,0:19:52.10,Phim,,0000,0000,0000,,Đoàn xe của tôi bị bọn khủng bố\Nhay quân nổi dậy gì đó tập kích.
Dialogue: 0,0:19:52.19,0:19:54.15,Phim,,0000,0000,0000,,Không rõ là ai.\NCòn tôi bị mắc kẹt.
Dialogue: 0,0:19:54.23,0:19:57.53,Phim,,0000,0000,0000,,Bị chôn trong quan tài\Ndưới đất. Tôi cần cứu trợ.
Dialogue: 0,0:19:57.61,0:19:59.95,Phim,,0000,0000,0000,,Làm ơn cử người cứu.\NTôi cầu xin đấy.
Dialogue: 0,0:20:00.03,0:20:02.03,Phim,,0000,0000,0000,,Tôi nghĩ mình đang\Nở Baqubah thuộc tỉnh Diyala.
Dialogue: 0,0:20:02.11,0:20:04.74,Phim,,0000,0000,0000,,Tôi không chắc lắm.\NLàm ơn cử người cứu.
Dialogue: 0,0:20:04.83,0:20:07.24,Phim,,0000,0000,0000,,Tôi không thở được.
Dialogue: 0,0:20:07.33,0:20:09.04,Phim,,0000,0000,0000,,Tôi không biết phải gọi cho\Nai nữa. Làm ơn cử...
Dialogue: 0,0:20:10.25,0:20:12.79,Phim,,0000,0000,0000,,Khốn kiếp!
Dialogue: 0,0:20:13.38,0:20:14.63,Phim,,0000,0000,0000,,Mẹ kiếp!
Dialogue: 0,0:20:15.34,0:20:17.92,Phim,,0000,0000,0000,,MẸ KIẾP!
Dialogue: 0,0:21:51.72,0:21:52.98,Phim,,0000,0000,0000,,Thôi nào.
Dialogue: 0,0:22:03.82,0:22:06.07,Phim,,0000,0000,0000,,Xin chào?\NCó ai ở đó không?
Dialogue: 0,0:22:07.24,0:22:08.41,Phim,,0000,0000,0000,,Xin chào?
Dialogue: 0,0:22:12.08,0:22:14.71,Phim,,0000,0000,0000,,- Xin chào?\N- Thở hay không, người Mỹ?
Dialogue: 0,0:22:15.29,0:22:16.83,Phim,,0000,0000,0000,,- Thở hay không thở?\N- Khoan đã... khoan đã.
Dialogue: 0,0:22:16.92,0:22:19.08,Phim,,0000,0000,0000,,Tôi không hiểu gì cả.\NAi đấy?
Dialogue: 0,0:22:19.17,0:22:20.71,Phim,,0000,0000,0000,,{\i1}Người Mỹ có thể\Nthở hay không?{\i0}
Dialogue: 0,0:22:20.79,0:22:22.84,Phim,,0000,0000,0000,,Không, tôi không thở được.\NLàm ơn đưa tôi ra khỏi đây.
Dialogue: 0,0:22:22.92,0:22:24.34,Phim,,0000,0000,0000,,- Ra à?\N- Phải, phải. Đưa tôi ra.
Dialogue: 0,0:22:24.42,0:22:26.17,Phim,,0000,0000,0000,,Đưa tôi ra.\NLàm ơn cứu tôi.
Dialogue: 0,0:22:26.26,0:22:28.51,Phim,,0000,0000,0000,,- Lính?\N- Không, tôi không phải lính.
Dialogue: 0,0:22:28.59,0:22:31.26,Phim,,0000,0000,0000,,Tôi là lái xe tải.\NChỉ là một nhà thầu thôi.
Dialogue: 0,0:22:31.35,0:22:33.31,Phim,,0000,0000,0000,,- Nhà thầu?\N- Phải, phải, một nhà thầu.
Dialogue: 0,0:22:33.39,0:22:35.02,Phim,,0000,0000,0000,,Thế thôi.\NKhông phải lính.
Dialogue: 0,0:22:35.10,0:22:37.31,Phim,,0000,0000,0000,,- Dầu hả?\N- Không, không phải dầu.
Dialogue: 0,0:22:37.39,0:22:40.69,Phim,,0000,0000,0000,,Tôi không phải nhà thầu an ninh.\NTôi chỉ là lái xe tải. Thế thôi.
Dialogue: 0,0:22:40.77,0:22:42.57,Phim,,0000,0000,0000,,- Người Mỹ hả?\N- Phải.
Dialogue: 0,0:22:43.40,0:22:45.03,Phim,,0000,0000,0000,,{\i1}Vậy là lính rồi.{\i0}
Dialogue: 0,0:22:48.11,0:22:50.03,Phim,,0000,0000,0000,,Không, tôi không phải.
Dialogue: 0,0:22:52.45,0:22:56.00,Phim,,0000,0000,0000,,Tôi ở đây, không vũ trang.\NNhưng các anh vẫn bắn chúng tôi.
Dialogue: 0,0:22:56.50,0:22:59.54,Phim,,0000,0000,0000,,{\i1} Vào đầu và cổ họng,\Nđừng dối trá nữa. {\i0}
Dialogue: 0,0:22:59.62,0:23:02.71,Phim,,0000,0000,0000,,Không, tôi không nói dối.\NBọn tôi đều là lái xe.
Dialogue: 0,0:23:02.79,0:23:05.17,Phim,,0000,0000,0000,,- Xe gì chứ?\N- Xe tải.
Dialogue: 0,0:23:05.26,0:23:06.92,Phim,,0000,0000,0000,,Xe tải chở hàng\Nmà các anh thường thấy.
Dialogue: 0,0:23:07.01,0:23:10.30,Phim,,0000,0000,0000,,Là tôi. Chúng tôi đấy.\NKhông phải lính. Là lái xe.
Dialogue: 0,0:23:11.34,0:23:13.64,Phim,,0000,0000,0000,,- 5 triệu, tiền mặt.\N- Gì cơ?
Dialogue: 0,0:23:13.72,0:23:18.39,Phim,,0000,0000,0000,,{\i1}5 triệu tiền mặt, 9h00 tối nay.\NHoặc ở lại, bị chôn như chó.{\i0}
Dialogue: 0,0:23:19.52,0:23:22.69,Phim,,0000,0000,0000,,- 5 triệu đô? Từ ai chứ?\N- Gia đình mày.
Dialogue: 0,0:23:22.77,0:23:26.90,Phim,,0000,0000,0000,,Gia đình tôi không có 5 triệu đô.\NNếu có, tôi đã không phải ở đây
Dialogue: 0,0:23:27.32,0:23:28.57,Phim,,0000,0000,0000,,{\i1}Từ Đại sứ quán.{\i0}
Dialogue: 0,0:23:30.53,0:23:33.66,Phim,,0000,0000,0000,,Tôi không biết.\NRồi, rồi, từ đại sứ quán.
Dialogue: 0,0:23:34.24,0:23:37.58,Phim,,0000,0000,0000,,Nếu anh cho tôi ra khỏi đây,\Nhọ sẽ trả cho anh tiền.
Dialogue: 0,0:23:37.66,0:23:40.67,Phim,,0000,0000,0000,,{\i1}9h tối,\N5 triệu tiền mặt.{\i0}
Dialogue: 0,0:26:52.82,0:26:55.07,Phim,,0000,0000,0000,,Trời ạ, là số nào vậy?
Dialogue: 0,0:27:05.04,0:27:07.08,Phim,,0000,0000,0000,,- Thành phố và vùng nào ạ?\N- Hastings, Michigan.
Dialogue: 0,0:27:07.16,0:27:08.79,Phim,,0000,0000,0000,,Tôi đang tìm Donna Mitchell.
Dialogue: 0,0:27:12.17,0:27:14.00,Phim,,0000,0000,0000,,{\i1}Có hai Donna Mitchells, thưa ông.{\i0}
Dialogue: 0,0:27:14.09,0:27:17.51,Phim,,0000,0000,0000,,{\i1}Một ở đường Liên Bang\Nvà một ở Đại Lộ Ardmore.{\i0}
Dialogue: 0,0:27:17.59,0:27:21.05,Phim,,0000,0000,0000,,Đại lộ Ardmore. Chắc vậy.\NKhông. Chết tiệt!
Dialogue: 0,0:27:21.14,0:27:22.72,Phim,,0000,0000,0000,,Tôi không rõ.\NCứ đưa tôi số đó.
Dialogue: 0,0:27:22.80,0:27:25.56,Phim,,0000,0000,0000,,- Đại lộ Ardmore?\N- Phải, đại lộ Ardmore.
Dialogue: 0,0:27:25.64,0:27:28.14,Phim,,0000,0000,0000,,Xin ông ghi lại số.
Dialogue: 0,0:27:28.23,0:27:29.81,Phim,,0000,0000,0000,,{\i1}Số mà ông yêu cầu...{\i0}
Dialogue: 0,0:27:29.89,0:27:33.98,Phim,,0000,0000,0000,,{\i1}269-148{\i0}
Dialogue: 0,0:27:34.07,0:27:37.74,Phim,,0000,0000,0000,,{\i1}1998 có thể...{\i0}
Dialogue: 0,0:27:43.12,0:27:44.37,Phim,,0000,0000,0000,,Thôi nào.
Dialogue: 0,0:27:45.41,0:27:47.16,Phim,,0000,0000,0000,,Đâu hết cả rồi?
Dialogue: 0,0:27:51.33,0:27:53.38,Phim,,0000,0000,0000,,- Xin chào?\N- Donna, Paul đây.
Dialogue: 0,0:27:53.46,0:27:55.67,Phim,,0000,0000,0000,,- Thế nào rồi?\N- Được rồi.
Dialogue: 0,0:27:55.75,0:27:58.84,Phim,,0000,0000,0000,,Tôi cần nói chuyện với Linda.\NCô ấy không trả lời điện thoại.
Dialogue: 0,0:27:58.92,0:27:59.88,Phim,,0000,0000,0000,,Tôi gặp chuyện.
Dialogue: 0,0:27:59.97,0:28:01.38,Phim,,0000,0000,0000,,Tôi bị một nhóm người\Nbắt cóc làm con tin...
Dialogue: 0,0:28:01.47,0:28:03.89,Phim,,0000,0000,0000,,{\i1}Bạn bị lừa rồi.\NGiờ thật sự tôi không ở nhà.{\i0}
Dialogue: 0,0:28:03.97,0:28:07.52,Phim,,0000,0000,0000,,{\i1}Nhưng nếu bạn để lại lời nhắn,\Ntôi sẽ gọi lại ngay khi có thể. Chào.{\i0}
Dialogue: 0,0:28:08.73,0:28:11.77,Phim,,0000,0000,0000,,Donna, tôi cần nói chuyện với Linda.\NCực khẩn cấp đấy.
Dialogue: 0,0:28:11.85,0:28:14.15,Phim,,0000,0000,0000,,Bảo cổ gọi cho tôi. Dùng sao 69\Nđể tìm số này trên điện thoại,
Dialogue: 0,0:28:14.23,0:28:15.98,Phim,,0000,0000,0000,,và bảo cô ấy gọi lại\Ncho tôi, được chứ?
Dialogue: 0,0:28:16.07,0:28:17.86,Phim,,0000,0000,0000,,- Paul?\N- Donna.
Dialogue: 0,0:28:17.94,0:28:20.61,Phim,,0000,0000,0000,,- Anh muốn gì?\N- Tôi cần nói chuyện với Linda. Cô ấy đâu?
Dialogue: 0,0:28:20.70,0:28:22.66,Phim,,0000,0000,0000,,Không rõ. Cả ngày vẫn chưa\Nchuyện với cô ấy. Thử di động...
Dialogue: 0,0:28:22.74,0:28:24.78,Phim,,0000,0000,0000,,- Giờ cô ở cạnh máy tính à?\N- Phải, nhưng sao?
Dialogue: 0,0:28:24.87,0:28:28.29,Phim,,0000,0000,0000,,Được rồi. Tôi cần cô tìm hộ\Nsố của Bộ Ngoại Giao.
Dialogue: 0,0:28:28.37,0:28:30.71,Phim,,0000,0000,0000,,Paul, tôi vừa định đi\Nsiêu thị. Tôi thật...
Dialogue: 0,0:28:30.79,0:28:32.58,Phim,,0000,0000,0000,,Xin cô đấy.\NTìm số đó hộ tôi.
Dialogue: 0,0:28:32.67,0:28:34.42,Phim,,0000,0000,0000,,- Mọi thứ ổn cả chứ?\N- Không! Không ổn chút nào!
Dialogue: 0,0:28:34.50,0:28:36.54,Phim,,0000,0000,0000,,- Hãy chỉ tìm sô đó cho tôi.\N- Đừng có quát tôi...
Dialogue: 0,0:28:36.63,0:28:38.25,Phim,,0000,0000,0000,,- Tôi không đâu, Donna.\N- Có, anh vừa đấy.
Dialogue: 0,0:28:38.34,0:28:40.76,Phim,,0000,0000,0000,,Không đâu. Hãy chỉ cho tôi\Ncái số chết tiệt đó!
Dialogue: 0,0:28:40.84,0:28:43.39,Phim,,0000,0000,0000,,Cho tôi số đó!\NĐưa tôi cái số chết tiệt đó!
Dialogue: 0,0:28:44.55,0:28:45.85,Phim,,0000,0000,0000,,KHỐN KHIẾP!
Dialogue: 0,0:28:45.93,0:28:48.52,Phim,,0000,0000,0000,,Mẹ kiếp con khốn!
Dialogue: 0,0:28:48.97,0:28:50.06,Phim,,0000,0000,0000,,MẸ KIẾP!
Dialogue: 0,0:28:50.56,0:28:53.02,Phim,,0000,0000,0000,,Mẹ kiếp, con đĩ!
Dialogue: 0,0:28:53.65,0:28:54.94,Phim,,0000,0000,0000,,Mẹ kiếp!
Dialogue: 0,0:29:17.50,0:29:20.80,Phim,,0000,0000,0000,,- Gì cơ?\N- Donna, tôi rất xin lỗi vì đã hét lên.
Dialogue: 0,0:29:21.55,0:29:23.34,Phim,,0000,0000,0000,,Đáng lẽ tôi không nên thế.
Dialogue: 0,0:29:23.43,0:29:25.55,Phim,,0000,0000,0000,,Nhưng tôi chỉ sẽ hỏi cô một lần\Nnữa lấy giúp tôi số này thôi.
Dialogue: 0,0:29:25.64,0:29:28.14,Phim,,0000,0000,0000,,Nếu cô không làm, tôi sẽ chết.
Dialogue: 0,0:29:28.22,0:29:30.31,Phim,,0000,0000,0000,,- Gì cơ?\N- Xin cô đấy, không phải lúc giải thích.
Dialogue: 0,0:29:30.39,0:29:32.98,Phim,,0000,0000,0000,,- Số.\N- Được rồi, giữ máy nhé.
Dialogue: 0,0:29:36.86,0:29:39.69,Phim,,0000,0000,0000,,- Rồi. Bộ Ngoại Giao.\N- Phải.
Dialogue: 0,0:29:39.77,0:29:42.53,Phim,,0000,0000,0000,,- Là 202...\N- 202.
Dialogue: 0,0:29:42.61,0:29:44.65,Phim,,0000,0000,0000,,- 134...\N- 134.
Dialogue: 0,0:29:44.74,0:29:47.74,Phim,,0000,0000,0000,,- 4750.\N- 4750?
Dialogue: 0,0:29:47.82,0:29:49.62,Phim,,0000,0000,0000,,- Phải.\N- Rồi. Mẹ kiếp cô.
Dialogue: 0,0:29:59.71,0:30:00.71,Phim,,0000,0000,0000,,{\i1}Bộ Ngoại giao Hoa Kỳ.{\i0}
Dialogue: 0,0:30:00.80,0:30:03.47,Phim,,0000,0000,0000,,Tôi là công dân Mỹ, đang làm việc\Ntại I-rắc. Bị bắt làm con tin.
Dialogue: 0,0:30:03.55,0:30:05.97,Phim,,0000,0000,0000,,- Tôi cần nói chuyện với ai đó ngay.\N- Ông gọi từ đâu vậy?
Dialogue: 0,0:30:06.05,0:30:10.05,Phim,,0000,0000,0000,,Từ I-rắc. Tôi là lái xe cho CRT.\N'Crestin, Roland and Thomas'.
Dialogue: 0,0:30:10.14,0:30:12.60,Phim,,0000,0000,0000,,Đoàn xe của tôi bị tấn công\Nvà tôi ngẫu nhiên vị giữ lại.
Dialogue: 0,0:30:12.68,0:30:15.48,Phim,,0000,0000,0000,,- Bọn bắt cóc ở cạnh ông?\N- Không, tôi đang bị chôn đâu đó.
Dialogue: 0,0:30:15.56,0:30:17.60,Phim,,0000,0000,0000,,- Ông bị chôn?\N- Phải, trong quan tài.
Dialogue: 0,0:30:17.69,0:30:19.48,Phim,,0000,0000,0000,,Một cái hộp gỗ.\NMột quan tài cũ bằng gỗ.
Dialogue: 0,0:30:19.56,0:30:21.36,Phim,,0000,0000,0000,,{\i1}Ông đã thử liên lạc với\Nquân đội ở đó chưa?{\i0}
Dialogue: 0,0:30:21.44,0:30:23.86,Phim,,0000,0000,0000,,Họ đã đưa tôi một số,\Nsố an toàn.
Dialogue: 0,0:30:23.94,0:30:25.99,Phim,,0000,0000,0000,,- Nhưng người ta đã lấy nó.\N- Kẻ bắt ông làm con tin?
Dialogue: 0,0:30:26.07,0:30:28.16,Phim,,0000,0000,0000,,Phải, phải.\NTôi không rõ nữa.
Dialogue: 0,0:30:28.24,0:30:30.83,Phim,,0000,0000,0000,,- Giữ máy. Để tôi kết nối ông với...\N- Không, đừng bảo tôi chờ! Không!
Dialogue: 0,0:30:40.92,0:30:42.21,Phim,,0000,0000,0000,,- Rebecca Browning.\N- Xin chào?
Dialogue: 0,0:30:42.30,0:30:44.55,Phim,,0000,0000,0000,,{\i1}Vâng, xin chào. Tôi chỉ vừa nghe\Nthông báo về tình hình của ông.{\i0}
Dialogue: 0,0:30:44.63,0:30:45.84,Phim,,0000,0000,0000,,Phải, tình hình của tôi.
Dialogue: 0,0:30:45.92,0:30:47.76,Phim,,0000,0000,0000,,Tôi sắp hết thời gian\Ncòn các người cứ bắt tôi chờ.
Dialogue: 0,0:30:47.84,0:30:49.51,Phim,,0000,0000,0000,,- Các người sao vậy?\N- Tôi xin lỗi.
Dialogue: 0,0:30:49.59,0:30:50.68,Phim,,0000,0000,0000,,Đừng xin lỗi.\NChỉ cần cứu tôi.
Dialogue: 0,0:30:50.76,0:30:52.47,Phim,,0000,0000,0000,,{\i1}Tôi có vài câu hỏi cho\Nông, ông Conroy.{\i0}
Dialogue: 0,0:30:52.56,0:30:53.60,Phim,,0000,0000,0000,,Các người đùa tôi chắc?
Dialogue: 0,0:30:53.60,0:30:55.18,Phim,,0000,0000,0000,,{\i1}Quan trọng là\Ntôi nhận được thông tin này.{\i0}
Dialogue: 0,0:30:55.18,0:30:58.48,Phim,,0000,0000,0000,,- Sẽ giúp ích nỗ lực giải cứu...\N- Khoan, chờ đã.
Dialogue: 0,0:30:58.56,0:31:00.65,Phim,,0000,0000,0000,,- Sao cô biết tên tôi?\N- Sao cơ ạ?
Dialogue: 0,0:31:00.73,0:31:05.44,Phim,,0000,0000,0000,,Tên tôi. Tôi không cho cô\Nbiết tên, cả những người khác nữa.
Dialogue: 0,0:31:05.53,0:31:07.53,Phim,,0000,0000,0000,,Chuyện này là thế nào vậy?
Dialogue: 0,0:31:08.07,0:31:11.62,Phim,,0000,0000,0000,,{\i1}Chúng tôi nhận được một cuộc gọi từ một\Nđại diện tại CRT. Ông đã để lại lời nhắn?{\i0}
Dialogue: 0,0:31:11.70,0:31:13.20,Phim,,0000,0000,0000,,- Phải?\N- Ông ấy đã liên hệ ngay với chúng tôi.
Dialogue: 0,0:31:13.28,0:31:14.41,Phim,,0000,0000,0000,,Vậy nếu cô đã biết chuyện\Nquái gì đang diễn ra,
Dialogue: 0,0:31:14.49,0:31:15.66,Phim,,0000,0000,0000,,vậy cô đã làm gì để\Nđể tôi ra khỏi đây?
Dialogue: 0,0:31:15.75,0:31:17.75,Phim,,0000,0000,0000,,{\i1}Ở Washington chúng tôi\Nkhông thể làm gì nhiều.{\i0}
Dialogue: 0,0:31:17.83,0:31:20.42,Phim,,0000,0000,0000,,Chỉ thể sao? Vậy là tôi cứ\Nyên tâm ngồi chết rữa ở đây
Dialogue: 0,0:31:20.50,0:31:21.58,Phim,,0000,0000,0000,,vì các người không\Nthể làm gì nhiều sao?
Dialogue: 0,0:31:21.67,0:31:22.67,Phim,,0000,0000,0000,,- Không.\N- Vậy thì gì?
Dialogue: 0,0:31:22.75,0:31:25.05,Phim,,0000,0000,0000,,{\i1}Tôi cần biết ông ở đâu\Nkhi đoàn xe bị phục kích.{\i0}
Dialogue: 0,0:31:25.13,0:31:27.34,Phim,,0000,0000,0000,,- Ở Baqubah, tỉnh Diyala.\N- Được rồi.
Dialogue: 0,0:31:27.42,0:31:29.05,Phim,,0000,0000,0000,,{\i1}Và bọn bắt cóc\Nđã liên lạc?{\i0}
Dialogue: 0,0:31:29.13,0:31:31.72,Phim,,0000,0000,0000,,Phải. Hắn nói muốn 5 triệu đô\Nđúng 9h tối nay.
Dialogue: 0,0:31:31.80,0:31:33.72,Phim,,0000,0000,0000,,Hoặc không...
Dialogue: 0,0:31:33.81,0:31:36.27,Phim,,0000,0000,0000,,Hắn sẽ cho tôi\Nđi tàu bay giấy.
Dialogue: 0,0:31:36.35,0:31:39.98,Phim,,0000,0000,0000,,- Vậy cô nghĩ sao?\N- Chúng tôi sẽ cố hết sức.
Dialogue: 0,0:31:40.06,0:31:42.31,Phim,,0000,0000,0000,,Vậy cô sẽ trả cho chúng?
Dialogue: 0,0:31:42.40,0:31:44.44,Phim,,0000,0000,0000,,- Không. Chúng tôi không thể.\N- Chờ đã. Tại sao?
Dialogue: 0,0:31:44.52,0:31:46.03,Phim,,0000,0000,0000,,Chính sách của\Nchính phủ Hoa Kỳ
Dialogue: 0,0:31:46.11,0:31:47.36,Phim,,0000,0000,0000,,là không thỏa hiệp\Nvới khủng bố.
Dialogue: 0,0:31:47.44,0:31:48.82,Phim,,0000,0000,0000,,Không phải chính sách\Ncủa chính phủ Hoa Kỳ?
Dialogue: 0,0:31:48.90,0:31:50.24,Phim,,0000,0000,0000,,Thôi đi bà cô!
Dialogue: 0,0:31:50.32,0:31:52.78,Phim,,0000,0000,0000,,Cô ngồi phòng máy lạnh\Nthì nói dễ rồi.
Dialogue: 0,0:31:52.87,0:31:56.12,Phim,,0000,0000,0000,,Cô đâu có bị chôn sống trong quan\Ntài ở cái sa mạc chết dẫm này!
Dialogue: 0,0:31:56.20,0:31:58.87,Phim,,0000,0000,0000,,- Tôi hiểu sự thất vọng của ông...\N- Thất vọng?
Dialogue: 0,0:31:58.96,0:32:02.46,Phim,,0000,0000,0000,,Này cô, tôi sắp chết mục\Nở đây rồi. Hiểu không hả?
Dialogue: 0,0:32:09.72,0:32:11.26,Phim,,0000,0000,0000,,- Xin chào!\N- Tôi đây.
Dialogue: 0,0:32:11.34,0:32:13.93,Phim,,0000,0000,0000,,Vậy hãy nói gì đó. Nói xem\Ncô sẽ cứu tôi khỏi đây thế nào.
Dialogue: 0,0:32:14.01,0:32:15.01,Phim,,0000,0000,0000,,{\i1}Được rồi{\i0}
Dialogue: 0,0:32:15.10,0:32:17.56,Phim,,0000,0000,0000,,Số điện mà ông\Ngọi từ là?
Dialogue: 0,0:32:17.64,0:32:20.64,Phim,,0000,0000,0000,,- Không biết. Không hiện số sao?\N- Không, nó mục không rõ số.
Dialogue: 0,0:32:20.73,0:32:22.85,Phim,,0000,0000,0000,,Nói tôi nghe ông có\Nnhớ một số không?
Dialogue: 0,0:32:22.94,0:32:24.77,Phim,,0000,0000,0000,,Không, tôi...\NTôi có một bút chì.
Dialogue: 0,0:32:24.86,0:32:27.69,Phim,,0000,0000,0000,,- Được rồi, hãy viết.\N- Rồi, chờ chút.
Dialogue: 0,0:32:28.82,0:32:30.61,Phim,,0000,0000,0000,,Rồi. Bắt đầu đi.
Dialogue: 0,0:32:30.70,0:32:32.20,Phim,,0000,0000,0000,,- 410...\N- Rồi.
Dialogue: 0,0:32:32.28,0:32:33.53,Phim,,0000,0000,0000,,...195...
Dialogue: 0,0:32:34.24,0:32:36.58,Phim,,0000,0000,0000,,- 5453.\N- 5453.
Dialogue: 0,0:32:36.66,0:32:38.70,Phim,,0000,0000,0000,,- Ai vậy?\N- Là Dan Brenner
Dialogue: 0,0:32:38.79,0:32:42.54,Phim,,0000,0000,0000,,Chỉ huy đội giải cứu\Ncon tin ở I-rắc.
Dialogue: 0,0:32:43.71,0:32:44.96,Phim,,0000,0000,0000,,Đội giải cứu con tin?
Dialogue: 0,0:32:45.04,0:32:48.63,Phim,,0000,0000,0000,,Được thành lập năm 2004\Nđể giải quyết các trường hợp như ông.
Dialogue: 0,0:32:48.71,0:32:51.92,Phim,,0000,0000,0000,,Các trường hợp.\NTôi thích cách cô gọi đấy.
Dialogue: 0,0:32:52.01,0:32:53.47,Phim,,0000,0000,0000,,- Ông đã ghi số lại chưa?\N- Rồi.
Dialogue: 0,0:32:53.55,0:32:55.85,Phim,,0000,0000,0000,,Tốt. Giờ hãy giữ máy,\Ntôi sẽ kết nối ông với ông ấy.
Dialogue: 0,0:32:55.93,0:32:58.43,Phim,,0000,0000,0000,,- Ông ấy đang mong ông đây.\N- Còn báo chí? Tôi muốn gọi họ.
Dialogue: 0,0:32:58.51,0:32:59.81,Phim,,0000,0000,0000,,Không, đừng gọi.
Dialogue: 0,0:32:59.89,0:33:01.35,Phim,,0000,0000,0000,,- Nhắc lại, đừng gọi báo chí.\N- Tại sao?
Dialogue: 0,0:33:01.43,0:33:03.23,Phim,,0000,0000,0000,,- Sẽ chỉ làm phức tạp hơn thôi.\N- Thật vớ vẩn.
Dialogue: 0,0:33:03.31,0:33:04.98,Phim,,0000,0000,0000,,- Cô chỉ bảo vệ cái 'mông' mình.\N- Không, bảo vệ ông đấy.
Dialogue: 0,0:33:05.06,0:33:06.73,Phim,,0000,0000,0000,,Các người không tìm người\Nmà đã biết là mất tích.
Dialogue: 0,0:33:06.81,0:33:07.82,Phim,,0000,0000,0000,,Mọi người cần biết\Nchuyện này.
Dialogue: 0,0:33:07.90,0:33:10.44,Phim,,0000,0000,0000,,- Tôi cần mọi sự giúp đỡ có thể.\N- Ta sắp hết thời gian, Paul.
Dialogue: 0,0:33:10.53,0:33:13.95,Phim,,0000,0000,0000,,Đó là lý do anh nên\Nliên hệ với Dan Brenner ngay.
Dialogue: 0,0:33:14.66,0:33:15.74,Phim,,0000,0000,0000,,Được thôi.
Dialogue: 0,0:33:16.62,0:33:18.62,Phim,,0000,0000,0000,,Tôi đang chuyển đây.
Dialogue: 0,0:33:40.18,0:33:41.72,Phim,,0000,0000,0000,,- Brenner\N- Dan Brenner?
Dialogue: 0,0:33:41.81,0:33:44.35,Phim,,0000,0000,0000,,- Phải Paul Conroy không?\N- Phải, tôi, Paul đây.
Dialogue: 0,0:33:44.44,0:33:46.27,Phim,,0000,0000,0000,,Paul, tôi đã được\Nthông báo lại vụ việc.
Dialogue: 0,0:33:46.35,0:33:49.61,Phim,,0000,0000,0000,,Tôi muốn anh biết rằng chúng tôi\Nđang cố gắng cứu anh ra khỏi đó.
Dialogue: 0,0:33:49.69,0:33:50.86,Phim,,0000,0000,0000,,Ơn Chúa.
Dialogue: 0,0:33:50.94,0:33:53.82,Phim,,0000,0000,0000,,Tôi được bảo là ta có đến\N9h tối, phải không?
Dialogue: 0,0:33:53.90,0:33:55.03,Phim,,0000,0000,0000,,- Hắn đã nói thế.\N- Được rồi.
Dialogue: 0,0:33:55.11,0:33:57.12,Phim,,0000,0000,0000,,Ta không có nhiều\Nthời gian cho lắm.
Dialogue: 0,0:33:57.20,0:34:00.08,Phim,,0000,0000,0000,,Và để cho chắc,\Nbọn chúng chôn anh dưới đất?
Dialogue: 0,0:34:00.16,0:34:01.29,Phim,,0000,0000,0000,,Phải. Trong một\Nquan tài cũ bằng gỗ.
Dialogue: 0,0:34:01.37,0:34:04.46,Phim,,0000,0000,0000,,Rồi, tôi đoán là vì anh có\Nđược sóng di động,
Dialogue: 0,0:34:04.54,0:34:06.27,Phim,,0000,0000,0000,,anh chắc không bị\Nchôn sâu lắm đâu.
Dialogue: 0,0:34:06.27,0:34:07.25,Phim,,0000,0000,0000,,Tôi không biết.\NCó thể.
Dialogue: 0,0:34:07.25,0:34:10.29,Phim,,0000,0000,0000,,Còn pin thế nào?\NCó còn nhiều không?
Dialogue: 0,0:34:10.38,0:34:14.97,Phim,,0000,0000,0000,,- Ít hơn một nửa.\N- Rồi, anh cần tiết kiệm pin.
Dialogue: 0,0:34:15.05,0:34:17.89,Phim,,0000,0000,0000,,Chúng tôi sẽ cố gắng tìm anh\Nbằng tín hiệu điện thoại.
Dialogue: 0,0:34:17.97,0:34:21.18,Phim,,0000,0000,0000,,- Để chuông hay rung vật?\N- Rung.
Dialogue: 0,0:34:21.26,0:34:23.43,Phim,,0000,0000,0000,,Tôi cần anh bấm\Nvà giữ phím [*]
Dialogue: 0,0:34:23.52,0:34:26.10,Phim,,0000,0000,0000,,để đổi thành chuông.\NNó sẽ sử dụng ít pin hơn.
Dialogue: 0,0:34:26.19,0:34:28.77,Phim,,0000,0000,0000,,- Còn Zippo của tôi?\N- Anh có bật lửa sao?
Dialogue: 0,0:34:28.86,0:34:31.40,Phim,,0000,0000,0000,,- Phải.\N- Dung nó dò quanh biểu tượng,
Dialogue: 0,0:34:31.48,0:34:33.07,Phim,,0000,0000,0000,,- logo, bất cứ gì anh thấy.\N- Không phải sẽ tốn oxy sao?
Dialogue: 0,0:34:33.15,0:34:34.74,Phim,,0000,0000,0000,,Đừng lo điều đó lúc này.\NHãy thử tìm xem...
Dialogue: 0,0:34:34.82,0:34:37.11,Phim,,0000,0000,0000,,- Không có nó ở đây tối quá.\N- Tôi hiểu, Paul.
Dialogue: 0,0:34:37.20,0:34:41.28,Phim,,0000,0000,0000,,Hãy cố tìm bất cứ gì trong đó mà\Ncó thể biết nơi quan tài được sản xuất.
Dialogue: 0,0:34:41.37,0:34:44.75,Phim,,0000,0000,0000,,- Các anh phải mau lên.\N- Sẽ nhanh nhất có thể, Paul.
Dialogue: 0,0:34:44.83,0:34:46.54,Phim,,0000,0000,0000,,Anh có biết có còn\Nai khác sống sót không?
Dialogue: 0,0:34:46.62,0:34:48.46,Phim,,0000,0000,0000,,- Đoàn xe của anh ấy?\N- Phải.
Dialogue: 0,0:34:48.54,0:34:50.67,Phim,,0000,0000,0000,,Vẫn không rõ.
Dialogue: 0,0:34:51.75,0:34:53.59,Phim,,0000,0000,0000,,Tôi chỉ muốn về với gia đình.\NĐó là tất cả.
Dialogue: 0,0:34:53.67,0:34:56.97,Phim,,0000,0000,0000,,Tôi không biết là\Nở đây sẽ như thế này.
Dialogue: 0,0:34:57.43,0:34:59.55,Phim,,0000,0000,0000,,Tôi không nghĩ\Nchúng ta đều biết vậy.
Dialogue: 0,0:35:03.10,0:35:04.60,Phim,,0000,0000,0000,,- Là hắn. Hắn đang gọi.\N- Tên bắt cóc?
Dialogue: 0,0:35:04.68,0:35:06.39,Phim,,0000,0000,0000,,- Phải. Tôi nên làm gì?\N- Anh biết số hắn?
Dialogue: 0,0:35:06.48,0:35:07.52,Phim,,0000,0000,0000,,- Phải.\N- Đưa nó cho tôi.
Dialogue: 0,0:35:07.60,0:35:09.10,Phim,,0000,0000,0000,,- Rồi. Thế còn cuộc gọi?\N- Cho tôi số trước đã.
Dialogue: 0,0:35:09.19,0:35:10.31,Phim,,0000,0000,0000,,- Hắn sắp cúp máy.\N- Nhận đi.
Dialogue: 0,0:35:10.40,0:35:13.02,Phim,,0000,0000,0000,,- Tôi... Được rồi..\N- Không sao đâu, cứ nhận đi.
Dialogue: 0,0:35:13.73,0:35:15.19,Phim,,0000,0000,0000,,Xin chào! Xin chào.
Dialogue: 0,0:35:16.03,0:35:17.86,Phim,,0000,0000,0000,,{\i1}2 giờ 4 phút.{\i0}
Dialogue: 0,0:35:20.24,0:35:23.53,Phim,,0000,0000,0000,,- Phải cho tôi thêm thời gian.\N- Nói chuyện với sứ quan chưa?
Dialogue: 0,0:35:23.62,0:35:25.54,Phim,,0000,0000,0000,,- Khoản tiền?\N- Rồi, rồi. Tôi nói rồi.
Dialogue: 0,0:35:25.62,0:35:27.33,Phim,,0000,0000,0000,,Chính phủ.\NHọ bảo sẽ không trả.
Dialogue: 0,0:35:27.41,0:35:28.54,Phim,,0000,0000,0000,,- Không trả?\N- Không.
Dialogue: 0,0:35:28.62,0:35:30.58,Phim,,0000,0000,0000,,Họ bảo mình không\Nthỏa hiệp với khủng bố.
Dialogue: 0,0:35:30.67,0:35:33.04,Phim,,0000,0000,0000,,Khủng bố?\NTao là khủng bố?
Dialogue: 0,0:35:33.13,0:35:36.71,Phim,,0000,0000,0000,,Phải, mày là\Nkhủng bố, thằng khốn ạ.
Dialogue: 0,0:35:36.80,0:35:39.22,Phim,,0000,0000,0000,,Mày sợ hãi,\Nnên tao là khủng bố?
Dialogue: 0,0:35:40.05,0:35:42.05,Phim,,0000,0000,0000,,Tao đã từng\Nlàm gì mày chứ?
Dialogue: 0,0:35:42.43,0:35:43.97,Phim,,0000,0000,0000,,- Từng làm?\N- Phải.
Dialogue: 0,0:35:45.06,0:35:49.39,Phim,,0000,0000,0000,,Phải. Tao ở đây vì công việc,\Nđể kiếm tiền.
Dialogue: 0,0:35:49.48,0:35:52.15,Phim,,0000,0000,0000,,- Thế đấy.\N- Tao đã có việc tới khi mày đến.
Dialogue: 0,0:35:52.23,0:35:54.65,Phim,,0000,0000,0000,,- Giờ gia đình tao không có gì.\N- Đâu phải lỗi của tao!
Dialogue: 0,0:35:54.73,0:35:56.90,Phim,,0000,0000,0000,,9/11 không phải lỗi tao,\Nnhưng bọn mày vẫn ở đây.
Dialogue: 0,0:35:57.09,0:35:59.15,Phim,,0000,0000,0000,,Saddam không phải lỗi tao,\Nnhưng bọn mày vẫn ở đây.
Dialogue: 0,0:35:59.24,0:36:02.07,Phim,,0000,0000,0000,,Tao đã nói rồi, tao chỉ ở đây\Nđể làm việc. Để giúp tái thiết.
Dialogue: 0,0:36:02.16,0:36:03.45,Phim,,0000,0000,0000,,Tái thiết lại những gì\Nchúng mày đã phá hủy.
Dialogue: 0,0:36:03.53,0:36:08.00,Phim,,0000,0000,0000,,Thôi đi! Làm ơn thôi đi! Tao chỉ\Nlà người thường, một lái xe tải thôi.
Dialogue: 0,0:36:08.08,0:36:09.62,Phim,,0000,0000,0000,,Tao chẳng là ai\Nđể được quyết định cả.
Dialogue: 0,0:36:09.71,0:36:11.58,Phim,,0000,0000,0000,,Tao chỉ muốn về nhà.
Dialogue: 0,0:36:16.84,0:36:18.01,Phim,,0000,0000,0000,,Alo?
Dialogue: 0,0:36:19.38,0:36:22.30,Phim,,0000,0000,0000,,- Mày làm video. Video tiền chuộc.\N- Rồi rồi!
Dialogue: 0,0:36:22.39,0:36:23.93,Phim,,0000,0000,0000,,Tao sẽ làm video,\Nnếu mày thả tao ra.
Dialogue: 0,0:36:24.01,0:36:26.01,Phim,,0000,0000,0000,,Không.\NLàm ngay bây giờ!
Dialogue: 0,0:36:26.10,0:36:28.43,Phim,,0000,0000,0000,,- Gì cơ? Bằng cách nào?\N- Dùng điện thoại mày ấy.
Dialogue: 0,0:36:29.31,0:36:32.56,Phim,,0000,0000,0000,,Gần chân. Đọc mảnh giấy\Ngần chân trong hộp.
Dialogue: 0,0:36:34.73,0:36:36.86,Phim,,0000,0000,0000,,- Tao không thấy.\N- Gần chân.
Dialogue: 0,0:36:36.94,0:36:39.36,Phim,,0000,0000,0000,,- Đọc mảnh giấy trong hộp.\N- Được rồi.
Dialogue: 0,0:36:39.44,0:36:43.36,Phim,,0000,0000,0000,,- Nếu tao làm, mày sẽ thả tao?\N- Chỉ khi bọn tao được tiền.
Dialogue: 0,0:36:43.45,0:36:46.03,Phim,,0000,0000,0000,,Sẽ chẳng ai chịu trả\N5 triệu vì tao đâu.
Dialogue: 0,0:36:46.12,0:36:49.00,Phim,,0000,0000,0000,,Vậy thì bọn tao sẽ\Nđòi ít hơn. 1 triệu.
Dialogue: 0,0:36:49.08,0:36:51.29,Phim,,0000,0000,0000,,Nếu họ trả,\Nmày sẽ thả tao chứ?
Dialogue: 0,0:36:52.58,0:36:55.17,Phim,,0000,0000,0000,,1 triệu, tiền mặt.
Dialogue: 0,0:41:03.92,0:41:07.04,Phim,,0000,0000,0000,,{\i1}Cảm ơn đã gọi cho nhà Conroy.\NHiện giờ chúng tôi không có nhà.{\i0}
Dialogue: 0,0:41:07.13,0:41:09.55,Phim,,0000,0000,0000,,{\i1}Hãy để lại lời nhắn sau\Ntiếng bíp. Cảm ơn!{\i0}
Dialogue: 0,0:41:12.22,0:41:15.18,Phim,,0000,0000,0000,,{\i1}Xin lỗi, cuộc gọi của bạn không\Nthực hiện được. Hãy quay lại số.{\i0}
Dialogue: 0,0:41:15.26,0:41:16.39,Phim,,0000,0000,0000,,Chết tiệt.
Dialogue: 0,0:41:28.82,0:41:30.15,Phim,,0000,0000,0000,,- [Dan]: Paul?\N- Đây là số.
Dialogue: 0,0:41:30.23,0:41:33.40,Phim,,0000,0000,0000,,- Được rồi, tiếp đi.\N- Rồi, chờ chút.
Dialogue: 0,0:41:34.78,0:41:39.58,Phim,,0000,0000,0000,,Là 07-902-24-921.
Dialogue: 0,0:41:40.29,0:41:43.66,Phim,,0000,0000,0000,,Được rồi. Tốt lắm, Paul.\NTrừ phi chúng xài số giả.
Dialogue: 0,0:41:43.75,0:41:46.50,Phim,,0000,0000,0000,,chúng ta sẽ có thể tìm ra nó\Ntừ đâu trong vài phút.
Dialogue: 0,0:41:46.58,0:41:48.42,Phim,,0000,0000,0000,,Rồi. Còn tôi thì sao?\NĐã dò được sóng của tôi chưa?
Dialogue: 0,0:41:48.50,0:41:50.17,Phim,,0000,0000,0000,,Của anh có\Nrất nhiều vấn đề.
Dialogue: 0,0:41:50.25,0:41:51.84,Phim,,0000,0000,0000,,Có vẻ là dùng thiết bị EDS,
Dialogue: 0,0:41:51.92,0:41:53.80,Phim,,0000,0000,0000,,có thể là qua một trong\Ncác trạm phát ở Ai Cập.
Dialogue: 0,0:41:53.88,0:41:55.63,Phim,,0000,0000,0000,,Thế nghĩa là sao?
Dialogue: 0,0:41:56.68,0:42:00.18,Phim,,0000,0000,0000,,- Tức là sẽ không dễ dàng đâu.\N- Hắn muốn tôi làm video tiền chuộc.
Dialogue: 0,0:42:00.26,0:42:02.93,Phim,,0000,0000,0000,,Không. Hãy cầm cự\Nđược càng lâu càng tốt.
Dialogue: 0,0:42:03.02,0:42:04.52,Phim,,0000,0000,0000,,Nếu nó giúp tôi thoát\Nlà tôi sẽ làm đấy.
Dialogue: 0,0:42:04.60,0:42:07.81,Phim,,0000,0000,0000,,Điều cuối cùng ta muốn\Nlà kết thúc bọn Al-Jazeera.
Dialogue: 0,0:42:07.90,0:42:08.90,Phim,,0000,0000,0000,,- Ta?\N- Đúng vậy.
Dialogue: 0,0:42:08.98,0:42:10.73,Phim,,0000,0000,0000,,Sẽ không thể thành\Nmột tai nạn quốc tế.
Dialogue: 0,0:42:10.82,0:42:13.32,Phim,,0000,0000,0000,,Các người chỉ quan tâm có\Nthế thôi sao? Thế còn tôi hả?
Dialogue: 0,0:42:13.40,0:42:14.45,Phim,,0000,0000,0000,,- Chúng tôi có.\N- Thế còn tôi hả?
Dialogue: 0,0:42:14.53,0:42:16.78,Phim,,0000,0000,0000,,Có mà, Paul. Thế nên\Nchúng tôi mới ở đây.
Dialogue: 0,0:42:16.86,0:42:19.45,Phim,,0000,0000,0000,,Không! Các người không\Nhề để tâm đến tôi.
Dialogue: 0,0:42:19.53,0:42:20.62,Phim,,0000,0000,0000,,Không ai\Ntrong chúng tôi cả.
Dialogue: 0,0:42:20.70,0:42:23.00,Phim,,0000,0000,0000,,Tôi có 8 người bạn bị giết\Nngoài kia, hôm nay là 6.
Dialogue: 0,0:42:23.08,0:42:26.54,Phim,,0000,0000,0000,,- Nghe nào, Paul. Anh...\N- Bọn tôi không súng, giáp gì cả.
Dialogue: 0,0:42:26.62,0:42:28.79,Phim,,0000,0000,0000,,- Không gì cả.\N- Vì các anh đâu phải lính.
Dialogue: 0,0:42:28.88,0:42:30.54,Phim,,0000,0000,0000,,Nói thế với những kẻ\Nnhốt tôi vào hộp ấy!
Dialogue: 0,0:42:30.63,0:42:33.84,Phim,,0000,0000,0000,,- Paul, nghe này.\N- Nói họ ai giết bạn tôi!
Dialogue: 0,0:42:33.92,0:42:36.88,Phim,,0000,0000,0000,,- Chúng tôi đang cố hết sức.\N- Không! Các người không!
Dialogue: 0,0:42:36.97,0:42:38.43,Phim,,0000,0000,0000,,- Bình tĩnh nào.\N- Tôi ở đây 9 tháng rồi.
Dialogue: 0,0:42:38.51,0:42:40.10,Phim,,0000,0000,0000,,Tôi không biết thế nào. Tất cả\Nnhững gì các người quan tâm
Dialogue: 0,0:42:40.18,0:42:41.89,Phim,,0000,0000,0000,,mấy kế hoạch bí mất\Nvới mấy hậu phòng chính trị.
Dialogue: 0,0:42:41.97,0:42:43.27,Phim,,0000,0000,0000,,Nếu tôi mà làm thương thuyết,
Dialogue: 0,0:42:43.35,0:42:46.10,Phim,,0000,0000,0000,,hay lãnh đạo tổ chức giải cứu,\Nhay cái tên chết dẫm gì của các người,
Dialogue: 0,0:42:46.19,0:42:47.23,Phim,,0000,0000,0000,,thì giờ tôi đã thoát ra rồi.
Dialogue: 0,0:42:47.31,0:42:50.06,Phim,,0000,0000,0000,,Nhưng không, tôi được đề nghị\Nngồi yên, ngậm miệng rồi chết.
Dialogue: 0,0:42:50.15,0:42:52.90,Phim,,0000,0000,0000,,Được rồi. Hãy tập\Ntrung vào nào, Paul.
Dialogue: 0,0:42:52.98,0:42:53.98,Phim,,0000,0000,0000,,Mẹ kiếp ông, Dan.
Dialogue: 0,0:42:54.07,0:42:56.90,Phim,,0000,0000,0000,,Paul, nghe tôi này. Tìm anh là\Nưu tiên hàng đầu của chúng tôi.
Dialogue: 0,0:42:56.99,0:42:58.91,Phim,,0000,0000,0000,,Là then chốt.\NChúng tôi sẽ tìm anh
Dialogue: 0,0:42:58.99,0:43:01.24,Phim,,0000,0000,0000,,tích cực như tìm\Nmột vị tướng 4 sao,
Dialogue: 0,0:43:01.33,0:43:03.41,Phim,,0000,0000,0000,,nên đừng phí sức mà\Nđoán gà đoán vịt.
Dialogue: 0,0:43:03.49,0:43:06.25,Phim,,0000,0000,0000,,Tôi... Tôi không thể...
Dialogue: 0,0:43:06.33,0:43:07.75,Phim,,0000,0000,0000,,Anh bị thương à, Paul?\NCó sao không?
Dialogue: 0,0:43:07.83,0:43:09.92,Phim,,0000,0000,0000,,Tôi không biết.\NHọ là ai?
Dialogue: 0,0:43:10.00,0:43:11.67,Phim,,0000,0000,0000,,Những kẻ nhốt tôi\Nvào đây, họ là ai?
Dialogue: 0,0:43:11.75,0:43:15.17,Phim,,0000,0000,0000,,Họ cũng là người.\NKhông khác anh với tôi là mấy.
Dialogue: 0,0:43:15.26,0:43:17.93,Phim,,0000,0000,0000,,- Tôi không phải khủng bố.\N- Họ cũng vậy.
Dialogue: 0,0:43:18.01,0:43:19.01,Phim,,0000,0000,0000,,Sao ông biết?
Dialogue: 0,0:43:19.72,0:43:23.18,Phim,,0000,0000,0000,,Nếu anh không nhà, chết đói...\NThật ra tôi rút lại nó.
Dialogue: 0,0:43:23.26,0:43:26.48,Phim,,0000,0000,0000,,Nếu gia đình anh mất nhà\Nvà chết đói, anh sẽ làm gì cho họ?
Dialogue: 0,0:43:26.56,0:43:29.56,Phim,,0000,0000,0000,,- Tôi sẽ không giết người.\N- Sao anh dám chắc được?
Dialogue: 0,0:43:30.94,0:43:32.69,Phim,,0000,0000,0000,,Thế có gì khác biệt chứ?
Dialogue: 0,0:43:32.77,0:43:35.44,Phim,,0000,0000,0000,,Họ thành tội phạm,\Nbởi quá tuyệt vọng.
Dialogue: 0,0:43:35.53,0:43:38.03,Phim,,0000,0000,0000,,Họ không quan tâm gì khác\Nhơn là lấy được tiền.
Dialogue: 0,0:43:38.11,0:43:39.99,Phim,,0000,0000,0000,,Vậy trả họ đi,\Ntrả cho họ là được.
Dialogue: 0,0:43:40.07,0:43:43.53,Phim,,0000,0000,0000,,Tin tôi đi, nếu đó là một\Nlựa chọn, tôi đã làm ngay rồi.
Dialogue: 0,0:43:46.75,0:43:48.96,Phim,,0000,0000,0000,,Bao người đã ở đây rồi?
Dialogue: 0,0:43:49.04,0:43:50.46,Phim,,0000,0000,0000,,- Kể từ khi tôi tới?\N- Phải.
Dialogue: 0,0:43:50.54,0:43:53.50,Phim,,0000,0000,0000,,Hàng tá. Nhà báo,\Nthầu khoán rồi lính.
Dialogue: 0,0:43:53.59,0:43:58.05,Phim,,0000,0000,0000,,Hàng ta người bị bắt. Đó\Nlà việc làm ăn ở đây.
Dialogue: 0,0:43:58.13,0:44:00.13,Phim,,0000,0000,0000,,Các ông đã\Ncứu được bao người?
Dialogue: 0,0:44:05.06,0:44:07.68,Phim,,0000,0000,0000,,- Bao nhiêu?\N- Không nhiều.
Dialogue: 0,0:44:07.77,0:44:09.85,Phim,,0000,0000,0000,,- Nói tôi tên họ xem.\N- Không.
Dialogue: 0,0:44:11.10,0:44:13.98,Phim,,0000,0000,0000,,- Bất cứ ai.\N- Ai?
Dialogue: 0,0:44:14.06,0:44:16.90,Phim,,0000,0000,0000,,Hãy khiến tôi tin họ\Nthực sự quan trọng với ông.
Dialogue: 0,0:44:16.98,0:44:18.90,Phim,,0000,0000,0000,,Rằng họ thực sự\Nquan trọng với ông.
Dialogue: 0,0:44:19.53,0:44:22.28,Phim,,0000,0000,0000,,- Mark White.\N- Mark White là ai?
Dialogue: 0,0:44:23.41,0:44:27.75,Phim,,0000,0000,0000,,Một nhóc từ New Hampshire.\N26 tuổi. Sinh viên y.
Dialogue: 0,0:44:28.37,0:44:31.25,Phim,,0000,0000,0000,,Đến đây để giúp đỡ\Ncác bác sĩ địa phương.
Dialogue: 0,0:44:31.33,0:44:33.13,Phim,,0000,0000,0000,,Cậu ta bị sao?
Dialogue: 0,0:44:33.71,0:44:36.63,Phim,,0000,0000,0000,,- Quân nổi dậy bắt cậu ta.\N- Khi nào?
Dialogue: 0,0:44:36.71,0:44:38.38,Phim,,0000,0000,0000,,Khoảng 3 tuần trước.
Dialogue: 0,0:44:42.47,0:44:45.35,Phim,,0000,0000,0000,,Ông nhớ tên cậu ta?
Dialogue: 0,0:44:45.43,0:44:47.51,Phim,,0000,0000,0000,,Tôi nhớ tên\Ntất cả bọn họ.
Dialogue: 0,0:44:49.93,0:44:51.94,Phim,,0000,0000,0000,,Cậu ta.... Còn không?
Dialogue: 0,0:44:52.02,0:44:54.61,Phim,,0000,0000,0000,,Có. Có, cậu ta vẫn sống.
Dialogue: 0,0:44:54.98,0:44:56.90,Phim,,0000,0000,0000,,- Giờ ở đâu rồi?\N- Nhà.
Dialogue: 0,0:44:57.98,0:45:00.49,Phim,,0000,0000,0000,,Có lẽ đang vui mừng\Nvì được trở lại trường.
Dialogue: 0,0:45:03.45,0:45:05.49,Phim,,0000,0000,0000,,Tôi muốn thoát khỏi đây.
Dialogue: 0,0:45:05.57,0:45:07.91,Phim,,0000,0000,0000,,Chúng tôi đã tìm thấy cậu ta.\NChúng tôi cũng sẽ thấy anh.
Dialogue: 0,0:45:09.95,0:45:11.00,Phim,,0000,0000,0000,,Như thế nào?
Dialogue: 0,0:45:11.37,0:45:14.54,Phim,,0000,0000,0000,,Chúng tôi đã có chút\Nmanh mối từ số anh đưa.
Dialogue: 0,0:45:14.63,0:45:17.59,Phim,,0000,0000,0000,,- Có sao?\N- Phải. Một đội đang đến đó.
Dialogue: 0,0:45:18.59,0:45:19.96,Phim,,0000,0000,0000,,Tốt quá.
Dialogue: 0,0:45:20.59,0:45:22.47,Phim,,0000,0000,0000,,- Khá hơn rồi.\N- Phải.
Dialogue: 0,0:45:24.47,0:45:27.30,Phim,,0000,0000,0000,,Vậy... tôi nên làm gì\Ntrong lúc đợi đây?
Dialogue: 0,0:45:27.72,0:45:30.22,Phim,,0000,0000,0000,,Tôi biết là rất khó,\Nnhưng hãy cố thư giãn.
Dialogue: 0,0:45:30.31,0:45:33.52,Phim,,0000,0000,0000,,Anh càng căng thẳng,\Ncàng mất nhiều không khí..
Dialogue: 0,0:45:33.60,0:45:35.73,Phim,,0000,0000,0000,,Được rồi, tôi biết rồi.
Dialogue: 0,0:45:35.81,0:45:40.86,Phim,,0000,0000,0000,,Tôi biết là rất khó,\Nvì tôi bị căng thẳng.
Dialogue: 0,0:45:41.78,0:45:43.65,Phim,,0000,0000,0000,,Tôi uống thuốc\Nđể giảm nó.
Dialogue: 0,0:45:43.99,0:45:46.07,Phim,,0000,0000,0000,,- Anh có mang theo chứ?\N- Có.
Dialogue: 0,0:45:46.16,0:45:47.16,Phim,,0000,0000,0000,,Tốt. Uống đi.
Dialogue: 0,0:45:47.78,0:45:50.24,Phim,,0000,0000,0000,,Hãy cố tiết kiệm oxy\Ntốt nhất có thể.
Dialogue: 0,0:45:50.33,0:45:51.45,Phim,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:45:52.62,0:45:55.25,Phim,,0000,0000,0000,,- Cái Zippo của anh vẫn sáng chứ?\N- Không, sắp hết.
Dialogue: 0,0:45:55.33,0:45:57.75,Phim,,0000,0000,0000,,- Được rồi, tốt.\N- Tôi thấy choáng váng.
Dialogue: 0,0:45:57.84,0:45:59.59,Phim,,0000,0000,0000,,- Hãy cố bình tĩnh.\N- Được rồi.
Dialogue: 0,0:45:59.67,0:46:01.84,Phim,,0000,0000,0000,,Và hãy tiết kiệm pin.
Dialogue: 0,0:46:02.51,0:46:05.01,Phim,,0000,0000,0000,,Chúng tôi đang chờ các tích hợp\Nđiện tử trong 10 phút.
Dialogue: 0,0:46:05.09,0:46:06.97,Phim,,0000,0000,0000,,- Gọi tôi sau nhé.\N- Được rồi.
Dialogue: 0,0:46:07.05,0:46:10.10,Phim,,0000,0000,0000,,- Cố lên, Paul.\N- Tôi đang cố đây.
Dialogue: 0,0:46:18.36,0:46:19.69,Phim,,0000,0000,0000,,- Cái gì?\N- Làm video chưa?
Dialogue: 0,0:46:19.77,0:46:20.94,Phim,,0000,0000,0000,,- Không.\N- Làm video đi!
Dialogue: 0,0:46:21.02,0:46:22.15,Phim,,0000,0000,0000,,- Thả tao rồi tao sẽ làm.\N- Không!
Dialogue: 0,0:46:22.23,0:46:23.94,Phim,,0000,0000,0000,,- Làm ngay đi.\N- Tao không đọc được.
Dialogue: 0,0:46:24.03,0:46:25.45,Phim,,0000,0000,0000,,- Làm ngay!\N- Tao không thể.
Dialogue: 0,0:46:25.53,0:46:27.32,Phim,,0000,0000,0000,,Tao không biết mày muốn tao\Nnói gì. Tao không đọc được.
Dialogue: 0,0:46:27.41,0:46:29.12,Phim,,0000,0000,0000,,Làm đi!\NNgay bây giờ!
Dialogue: 0,0:46:30.53,0:46:31.62,Phim,,0000,0000,0000,,Mẹ kiếp!
Dialogue: 0,0:46:58.40,0:47:00.36,Phim,,0000,0000,0000,,Được rồi, được rồi.\NNào, nào.
Dialogue: 0,0:47:01.27,0:47:02.40,Phim,,0000,0000,0000,,Thôi nào!
Dialogue: 0,0:47:02.48,0:47:05.78,Phim,,0000,0000,0000,,Từ từ nào.
Dialogue: 0,0:47:38.48,0:47:39.60,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,0:48:12.01,0:48:13.14,Phim,,0000,0000,0000,,Chết tiệt.
Dialogue: 0,0:49:56.07,0:49:58.08,Phim,,0000,0000,0000,,{\i1}Viên điều dưỡng\NMountain View xin nghe.{\i0}
Dialogue: 0,0:49:58.16,0:50:02.62,Phim,,0000,0000,0000,,Xin chào, làm ơn cho tôi\Nnói chuyện với Maryanne Conroy.
Dialogue: 0,0:50:03.91,0:50:05.08,Phim,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:50:05.58,0:50:09.96,Phim,,0000,0000,0000,,Để tôi mang điện thoại vào\Nphòng cô ấy. Xin đợi một lát.
Dialogue: 0,0:50:17.76,0:50:20.47,Phim,,0000,0000,0000,,Bà Conroy,\Nbà có điện thoại.
Dialogue: 0,0:50:21.26,0:50:22.93,Phim,,0000,0000,0000,,Bà có thể dùng cái này.
Dialogue: 0,0:50:26.06,0:50:27.23,Phim,,0000,0000,0000,,Alo?
Dialogue: 0,0:50:27.94,0:50:29.94,Phim,,0000,0000,0000,,Mẹ, con, Paul đây.
Dialogue: 0,0:50:30.77,0:50:31.82,Phim,,0000,0000,0000,,Ai cơ?
Dialogue: 0,0:50:32.44,0:50:34.40,Phim,,0000,0000,0000,,Paul. Con trai mẹ.
Dialogue: 0,0:50:35.45,0:50:36.91,Phim,,0000,0000,0000,,Tôi có con trai?
Dialogue: 0,0:50:36.99,0:50:39.53,Phim,,0000,0000,0000,,Được rồi, mẹ.\NMẹ khỏe chứ?
Dialogue: 0,0:50:39.95,0:50:41.83,Phim,,0000,0000,0000,,- Khỏe.\N- Tốt quá.
Dialogue: 0,0:50:43.08,0:50:44.45,Phim,,0000,0000,0000,,Anh là ai vậy?
Dialogue: 0,0:50:45.12,0:50:47.50,Phim,,0000,0000,0000,,Con trai mẹ, Paulie.
Dialogue: 0,0:50:48.75,0:50:50.46,Phim,,0000,0000,0000,,- Paulie.\N- Vâng.
Dialogue: 0,0:50:52.00,0:50:56.30,Phim,,0000,0000,0000,,Mẹ nhớ chứ? Ta từng sống ở\Nphố Colfax, trong căn hộ hai tầng.
Dialogue: 0,0:50:57.01,0:50:58.84,Phim,,0000,0000,0000,,- Paulie?\N- Phải.
Dialogue: 0,0:51:00.55,0:51:02.93,Phim,,0000,0000,0000,,- Đúng rồi.\N- Là Paulie sao?
Dialogue: 0,0:51:03.01,0:51:04.73,Phim,,0000,0000,0000,,Vâng. Paulie đây.
Dialogue: 0,0:51:07.64,0:51:10.44,Phim,,0000,0000,0000,,- Mọi việc ở nhà sao rồi?\N- Rất tốt.
Dialogue: 0,0:51:11.15,0:51:14.82,Phim,,0000,0000,0000,,Bố mẹ thường chơi\Nbài rumi mỗi đêm đấy.
Dialogue: 0,0:51:17.61,0:51:18.70,Phim,,0000,0000,0000,,Vâng.
Dialogue: 0,0:51:19.82,0:51:21.83,Phim,,0000,0000,0000,,Con không nghĩ là\Nbố có ở đấy với mẹ đâu.
Dialogue: 0,0:51:22.91,0:51:25.00,Phim,,0000,0000,0000,,Con sao rồi, con yêu?
Dialogue: 0,0:51:25.95,0:51:27.46,Phim,,0000,0000,0000,,Không ổn lắm.
Dialogue: 0,0:51:31.00,0:51:33.96,Phim,,0000,0000,0000,,Có thể đây sẽ là\Nlần cuối con nói chuyện với mẹ.
Dialogue: 0,0:51:34.05,0:51:35.80,Phim,,0000,0000,0000,,Nghe hay đấy, con yêu.
Dialogue: 0,0:51:38.30,0:51:41.51,Phim,,0000,0000,0000,,Mẹ có nhận được hoa\Ncon gửi vài tháng trước không?
Dialogue: 0,0:51:41.93,0:51:46.73,Phim,,0000,0000,0000,,- Hoa á?\N- Vâng, con đã gửi... Không có gì.
Dialogue: 0,0:51:48.77,0:51:51.56,Phim,,0000,0000,0000,,Con phải đi đây, được chứ?
Dialogue: 0,0:51:52.11,0:51:54.90,Phim,,0000,0000,0000,,Con chỉ muốn gọi\Nvà nói chuyện với mẹ.
Dialogue: 0,0:51:55.61,0:51:57.19,Phim,,0000,0000,0000,,Con yêu mẹ.
Dialogue: 0,0:51:59.40,0:52:01.74,Phim,,0000,0000,0000,,Con nói là con yêu mẹ.\NMẹ không muốn nói yêu con sao?
Dialogue: 0,0:52:01.82,0:52:06.24,Phim,,0000,0000,0000,,Ừ, con yêu. Bố mẹ vẫn chơi\Nbài rumi mỗi đêm đấy.
Dialogue: 0,0:52:07.83,0:52:09.16,Phim,,0000,0000,0000,,Được rồi, mẹ ạ.
Dialogue: 0,0:52:09.58,0:52:11.50,Phim,,0000,0000,0000,,Bảo bố là con nói chào.
Dialogue: 0,0:53:00.97,0:53:02.01,Phim,,0000,0000,0000,,Không.
Dialogue: 0,0:53:02.63,0:53:04.39,Phim,,0000,0000,0000,,Không không không!
Dialogue: 0,0:53:05.60,0:53:07.51,Phim,,0000,0000,0000,,Không không không!
Dialogue: 0,0:53:10.77,0:53:12.39,Phim,,0000,0000,0000,,- Làm video chưa?\N- Xin đừng làm hại cô ấy!
Dialogue: 0,0:53:12.48,0:53:14.19,Phim,,0000,0000,0000,,- Đừng hại cô ấy! Thả cô ấy ra!\N- Tao sẽ bắn nếu mày không làm.
Dialogue: 0,0:53:14.27,0:53:16.73,Phim,,0000,0000,0000,,- Không! Đừng bắn cô ấy!\N- Chuẩn bị tiền. Đô Mỹ.
Dialogue: 0,0:53:16.82,0:53:18.23,Phim,,0000,0000,0000,,Được rồi, tôi hứa.
Dialogue: 0,0:53:18.32,0:53:20.19,Phim,,0000,0000,0000,,Tôi hứa. Làm ơn đi.\NCô ấy là mẹ, có hai con.
Dialogue: 0,0:53:20.28,0:53:21.36,Phim,,0000,0000,0000,,- Hai con?\N- Vâng, hai con.
Dialogue: 0,0:53:21.44,0:53:23.03,Phim,,0000,0000,0000,,Tao từng có năm.\NGiờ chỉ còn một.
Dialogue: 0,0:53:23.11,0:53:24.45,Phim,,0000,0000,0000,,- Mày làm video ngay!\N- Đợi đã!
Dialogue: 0,0:53:24.53,0:53:25.87,Phim,,0000,0000,0000,,- Không! Đợi đã.\N- Tao cho 3 giây.
Dialogue: 0,0:53:25.95,0:53:27.24,Phim,,0000,0000,0000,,-Tôi không biết anh muốn tôi nói gì!\N- Ba...
Dialogue: 0,0:53:27.33,0:53:29.62,Phim,,0000,0000,0000,,- Được rồi! Tôi sẽ làm!\N- Hai, một!
Dialogue: 0,0:53:29.70,0:53:32.54,Phim,,0000,0000,0000,,Tôi sẽ làm!\NTôi sẽ làm! Làm ơn mà!
Dialogue: 0,0:53:32.62,0:53:34.62,Phim,,0000,0000,0000,,Tôi phải cúp máy để làm\Nvideo. Được chứ?
Dialogue: 0,0:53:34.71,0:53:37.13,Phim,,0000,0000,0000,,Mày có 3 phút\Nđể gửi video.
Dialogue: 0,0:54:01.15,0:54:02.40,Phim,,0000,0000,0000,,Tôi tên là Paul Conroy.
Dialogue: 0,0:54:02.49,0:54:04.95,Phim,,0000,0000,0000,,Tôi là một công dân Mỹ\Ntừ Hastings, Michigan.
Dialogue: 0,0:54:05.03,0:54:08.99,Phim,,0000,0000,0000,,Tôi là lái xe tải dân sự\Ncho 'Crestin, Roland and Thomas'.
Dialogue: 0,0:54:09.08,0:54:11.79,Phim,,0000,0000,0000,,Và tôi đã bị bắt cóc\Nở đâu đó ở I-rắc.
Dialogue: 0,0:54:12.70,0:54:15.83,Phim,,0000,0000,0000,,Tôi cần 1 triệu đô Mỹ\Nđúng 9h tối nay, giờ Bát-đa.
Dialogue: 0,0:54:16.54,0:54:19.34,Phim,,0000,0000,0000,,hoặc tôi sẽ bị để mặc chết\Ntrong chiếc quan tài chôn rồi này.
Dialogue: 0,0:54:20.25,0:54:22.80,Phim,,0000,0000,0000,,Tôi được bảo rằng\Nnếu được trả tiền...
Dialogue: 0,0:54:24.76,0:54:27.34,Phim,,0000,0000,0000,,Nếu được trả tiền,\Nhọ sẽ thả tôi ra.
Dialogue: 0,0:54:27.43,0:54:29.85,Phim,,0000,0000,0000,,Nếu không,\Ntôi sẽ bị bỏ mặc chết.
Dialogue: 0,0:54:31.77,0:54:35.23,Phim,,0000,0000,0000,,Những lời đe dọa này là thật\Nvà sẽ được truyền đi.
