Dialogue: 0,1:14:13.49,1:14:15.36,Phim,,0000,0000,0000,,Đồ rác rưởi.
Dialogue: 0,1:14:16.70,1:14:19.99,Phim,,0000,0000,0000,,{\i1}Đó là kết luận cuộc phỏng vấn\Nvới Paul Conroy.{\i0}
Dialogue: 0,1:14:20.08,1:14:22.37,Phim,,0000,0000,0000,,{\i1}Tôi tắt máy ghi âm đây.{\i0}
Dialogue: 0,1:14:25.04,1:14:26.63,Phim,,0000,0000,0000,,Các người đã\Nđưa tôi tới đây.
Dialogue: 0,1:14:31.13,1:14:32.46,Phim,,0000,0000,0000,,{\i1}Tôi rất tiếc.{\i0}
Dialogue: 0,1:16:27.41,1:16:30.42,Phim,,0000,0000,0000,,Trả lời đi.
Dialogue: 0,1:16:50.64,1:16:53.52,Phim,,0000,0000,0000,,Nào. Sao không trả lời?
Dialogue: 0,1:18:09.31,1:18:10.68,Phim,,0000,0000,0000,,{\i1}Paul, phải anh không?{\i0}
Dialogue: 0,1:18:10.77,1:18:12.27,Phim,,0000,0000,0000,,Họ chết cả rồi.
Dialogue: 0,1:18:12.48,1:18:14.56,Phim,,0000,0000,0000,,- Sao anh biết?\N- Chỉ biết thôi.
Dialogue: 0,1:18:15.69,1:18:18.86,Phim,,0000,0000,0000,,{\i1}3 chiếc F-16 cất cánh\Ndời thành phố vài phút trước{\i0}
Dialogue: 0,1:18:18.94,1:18:20.94,Phim,,0000,0000,0000,,Phải, biết rồi.
Dialogue: 0,1:18:21.57,1:18:23.11,Phim,,0000,0000,0000,,Phải, chắc là vì tôi.
Dialogue: 0,1:18:26.45,1:18:28.45,Phim,,0000,0000,0000,,Họ có biết tôi ở đây không?
Dialogue: 0,1:18:29.91,1:18:31.83,Phim,,0000,0000,0000,,- Có.\N- Phải.
Dialogue: 0,1:18:32.62,1:18:34.54,Phim,,0000,0000,0000,,Họ có quan tâm không?
Dialogue: 0,1:18:39.75,1:18:43.67,Phim,,0000,0000,0000,,Cái bọn bắt tôi,\Nnếu chúng chết rồi,
Dialogue: 0,1:18:44.93,1:18:47.14,Phim,,0000,0000,0000,,chúng không thể nói\Ntôi đang ở đâu đâu.
Dialogue: 0,1:18:47.80,1:18:50.35,Phim,,0000,0000,0000,,{\i1}Ta vẫn có thể truy ra\Ntín hiệu của anh{\i0}
Dialogue: 0,1:18:51.85,1:18:53.31,Phim,,0000,0000,0000,,Ông đã thử rồi mà.
Dialogue: 0,1:18:53.52,1:18:55.48,Phim,,0000,0000,0000,,{\i1}Ta có thể thử lại.{\i0}
Dialogue: 0,1:19:04.03,1:19:06.41,Phim,,0000,0000,0000,,- Hết rồi, đúng không?\N- Không.
Dialogue: 0,1:19:10.58,1:19:11.99,Phim,,0000,0000,0000,,{\i1}Phải.{\i0}
Dialogue: 0,1:19:17.54,1:19:19.17,Phim,,0000,0000,0000,,Tôi nên làm gì đây?
Dialogue: 0,1:19:21.84,1:19:23.17,Phim,,0000,0000,0000,,{\i1}Tôi không biết.{\i0}
Dialogue: 0,1:19:25.26,1:19:26.63,Phim,,0000,0000,0000,,Lạ thật.
Dialogue: 0,1:19:27.80,1:19:29.01,Phim,,0000,0000,0000,,{\i1}Gì vậy?{\i0}
Dialogue: 0,1:19:30.72,1:19:32.18,Phim,,0000,0000,0000,,Biết vậy thôi.
Dialogue: 0,1:19:35.52,1:19:38.31,Phim,,0000,0000,0000,,{\i1}Tôi ước chuyện này\Ncó thể khác đi, Paul ạ.{\i0}
Dialogue: 0,1:19:40.44,1:19:41.77,Phim,,0000,0000,0000,,Phải.
Dialogue: 0,1:19:44.44,1:19:45.82,Phim,,0000,0000,0000,,Tôi cũng vậy.
Dialogue: 0,1:20:03.34,1:20:05.55,Phim,,0000,0000,0000,,Tên tôi là Paul Steven Conroy.
Dialogue: 0,1:20:07.38,1:20:12.93,Phim,,0000,0000,0000,,Số bảo hiểm xã hội 048-32-1198.\NNgày sinh 20/3/76.
Dialogue: 0,1:20:15.85,1:20:19.94,Phim,,0000,0000,0000,,Đây sẽ là đoạn video\Ndi chúc sau cùng của tôi.
Dialogue: 0,1:20:22.19,1:20:23.61,Phim,,0000,0000,0000,,Ừm...
Dialogue: 0,1:20:25.57,1:20:27.78,Phim,,0000,0000,0000,,Đến vợ tôi,\NLinda Conroy,
Dialogue: 0,1:20:29.07,1:20:32.37,Phim,,0000,0000,0000,,Tôi để lại 700 đô\Ntiền tiết kiệm cá nhân
Dialogue: 0,1:20:34.99,1:20:37.75,Phim,,0000,0000,0000,,và những gì có\Ntừ trợ cấp hằng năm.
Dialogue: 0,1:20:39.04,1:20:42.92,Phim,,0000,0000,0000,,Cho con trai tôi,\NShane Conroy,
Dialogue: 0,1:20:46.88,1:20:48.42,Phim,,0000,0000,0000,,Tôi không biết.
Dialogue: 0,1:20:49.76,1:20:52.97,Phim,,0000,0000,0000,,Tôi không có...\NQuần áo của mình.
Dialogue: 0,1:20:54.43,1:20:57.81,Phim,,0000,0000,0000,,Để lại cho con,\Nlớn lên mặc là vừa.
Dialogue: 0,1:21:00.02,1:21:01.94,Phim,,0000,0000,0000,,Không phải bộ này.
Dialogue: 0,1:21:05.94,1:21:07.94,Phim,,0000,0000,0000,,Bố thật sự không có...
Dialogue: 0,1:21:09.11,1:21:12.03,Phim,,0000,0000,0000,,Bố ước mình có nhiều hơn\Ncho con, nhưng...
Dialogue: 0,1:21:14.24,1:21:18.25,Phim,,0000,0000,0000,,Có lẽ nếu bố là cầu thủ bóng chày\Nnổi tiếng hay mấy tay bận đồ công sở...
Dialogue: 0,1:21:20.71,1:21:22.62,Phim,,0000,0000,0000,,Thì chắc là có nhiều hơn.
Dialogue: 0,1:21:23.17,1:21:27.09,Phim,,0000,0000,0000,,Mà con biết đấy, con có thể\Ntrở thành họ nếu muốn...
Dialogue: 0,1:21:28.80,1:21:31.22,Phim,,0000,0000,0000,,Rồi, rồi.
Dialogue: 0,1:21:32.22,1:21:35.93,Phim,,0000,0000,0000,,Hãy hứa với bố là sẽ chăm sóc mẹ\Nthật tốt khi trưởng thành.
Dialogue: 0,1:21:36.01,1:21:38.72,Phim,,0000,0000,0000,,Và, bố không biết nữa.
Dialogue: 0,1:21:40.14,1:21:42.81,Phim,,0000,0000,0000,,Con luôn cố làm\Nđiều đúng đắn.
Dialogue: 0,1:21:46.61,1:21:48.94,Phim,,0000,0000,0000,,Bố yêu con nhiều lắm, Shane.
Dialogue: 0,1:21:51.78,1:21:56.41,Phim,,0000,0000,0000,,Có lẽ bố chưa bao giờ nói đủ.\NCó lẽ rồi. Bố không biết.
Dialogue: 0,1:21:57.62,1:22:00.66,Phim,,0000,0000,0000,,Có thể là bố chưa. Và...
Dialogue: 0,1:22:08.17,1:22:11.30,Phim,,0000,0000,0000,,Anh xin lỗi, Linda.\NĐáng ra anh phải nghe em.
Dialogue: 0,1:23:18.99,1:23:22.37,Phim,,0000,0000,0000,,Chưa chết sao?
Dialogue: 0,1:23:22.45,1:23:23.87,Phim,,0000,0000,0000,,Tiền đâu?
Dialogue: 0,1:23:24.79,1:23:26.46,Phim,,0000,0000,0000,,- Không biết.\N- Không biết cái gì?
Dialogue: 0,1:23:26.54,1:23:28.00,Phim,,0000,0000,0000,,- Không biết nó ở đâu.\N- Dối trá!
Dialogue: 0,1:23:28.08,1:23:29.54,Phim,,0000,0000,0000,,Tôi không nói dối,\Ntôi thề đấy.
Dialogue: 0,1:23:29.63,1:23:31.88,Phim,,0000,0000,0000,,- Thề?\N- Phải, tôi thề.
Dialogue: 0,1:23:31.96,1:23:33.51,Phim,,0000,0000,0000,,- Tôi nói sự thật.\N- Từ đại sứ quán.
Dialogue: 0,1:23:33.59,1:23:34.84,Phim,,0000,0000,0000,,- Không.\N- Mày lấy tiền ngay!
Dialogue: 0,1:23:34.92,1:23:36.01,Phim,,0000,0000,0000,,- Tôi không thể!\N- Mày sẽ!
Dialogue: 0,1:23:36.09,1:23:37.88,Phim,,0000,0000,0000,,- Tôi cần thêm thời gian.\N- Không còn nữa đâu!
Dialogue: 0,1:23:37.97,1:23:39.51,Phim,,0000,0000,0000,,Cát đang tràn\Nvào đây này.
Dialogue: 0,1:23:39.59,1:23:42.97,Phim,,0000,0000,0000,,Ở khắp nơi. Thả tôi ra đi.\NTôi hứa là sẽ lấy tiền.
Dialogue: 0,1:23:43.06,1:23:44.85,Phim,,0000,0000,0000,,- Mày cho thấy máu đi.\N- Cái gì?
Dialogue: 0,1:23:44.93,1:23:47.35,Phim,,0000,0000,0000,,- Thấy máu mày, họ sẽ đưa tiền.\N- Không.
Dialogue: 0,1:23:47.44,1:23:50.15,Phim,,0000,0000,0000,,Cắt ngón tay,\Nrồi gửi video.
Dialogue: 0,1:23:50.23,1:23:51.94,Phim,,0000,0000,0000,,- No, I'm not doing that.\N- Yes!
Dialogue: 0,1:23:52.02,1:23:53.02,Phim,,0000,0000,0000,,- Tôi không làm đâu.\N- Không?
Dialogue: 0,1:23:53.11,1:23:54.86,Phim,,0000,0000,0000,,Phải đấy, không đâu.\NThả tôi ra,
Dialogue: 0,1:23:54.94,1:23:56.74,Phim,,0000,0000,0000,,rồi tôi sẽ cắt cả bàn tay\Nchết tiệt này nếu ông muốn.
Dialogue: 0,1:23:56.82,1:23:58.24,Phim,,0000,0000,0000,,- Mày có vợ chứ?\N- Có.
Dialogue: 0,1:23:58.32,1:24:01.20,Phim,,0000,0000,0000,,Và một đứa con trai nhỏ.\NTôi muốn thấy họ. Ngài làm ơn đi.
Dialogue: 0,1:24:01.28,1:24:02.53,Phim,,0000,0000,0000,,- Ngài?\N- Phải. Ngài
Dialogue: 0,1:24:02.62,1:24:04.08,Phim,,0000,0000,0000,,Tôi nói đầy kính trọng đấy.
Dialogue: 0,1:24:04.16,1:24:08.58,Phim,,0000,0000,0000,,{\i1}243 Đường East Walnut,\NHastings, Michigan, Hoa Kỳ.{\i0}
Dialogue: 0,1:24:08.79,1:24:11.71,Phim,,0000,0000,0000,,Đó là... sao ông nói vậy?
Dialogue: 0,1:24:12.09,1:24:14.80,Phim,,0000,0000,0000,,Cho thấy máu mày\Nhoặc là máu họ.
Dialogue: 0,1:24:14.88,1:24:17.92,Phim,,0000,0000,0000,,Không. Ông không là gì cả.\NTất cả các người.
Dialogue: 0,1:24:18.55,1:24:19.59,Phim,,0000,0000,0000,,Ông không thể\Nđến chỗ họ được.
Dialogue: 0,1:24:19.68,1:24:20.84,Phim,,0000,0000,0000,,- Không?\N- Không.
Dialogue: 0,1:24:20.93,1:24:23.39,Phim,,0000,0000,0000,,Vì mày là đồ nông dân,\Ntên tội phạm chết dẫm, thế thôi.
Dialogue: 0,1:24:23.47,1:24:24.64,Phim,,0000,0000,0000,,Mày còn không biết\NMichigan ở đâu.
Dialogue: 0,1:24:24.72,1:24:26.60,Phim,,0000,0000,0000,,{\i1}Detroit. Ann Arbor.{\i0}
Dialogue: 0,1:24:26.68,1:24:29.60,Phim,,0000,0000,0000,,Mày nhìn bản đồ.
Dialogue: 0,1:24:29.69,1:24:34.32,Phim,,0000,0000,0000,,Máu mày, hoặc máu họ.\NGửi video trong 5 phút.
Dialogue: 0,1:24:47.83,1:24:51.75,Phim,,0000,0000,0000,,{\i1}Chào, đây là Linda. Xin để lại lời nhắn.\NCảm ơn và chúc một ngày tốt lành.{\i0}
Dialogue: 0,1:24:51.83,1:24:55.55,Phim,,0000,0000,0000,,Linda, nghe anh đây.\NEm cùng Shane phải dời khỏi đó.
Dialogue: 0,1:24:55.63,1:24:58.30,Phim,,0000,0000,0000,,Đừng có quay về nhà.
Dialogue: 0,1:24:58.38,1:25:00.93,Phim,,0000,0000,0000,,Bất kỳ đâu trừ nhà ra.\NChúng biết chỗ em ở.
Dialogue: 0,1:25:01.01,1:25:02.43,Phim,,0000,0000,0000,,Chúng có bằng lái của anh.
Dialogue: 0,1:25:02.51,1:25:05.89,Phim,,0000,0000,0000,,Hãy đến sở cảnh sát nếu cần,\Nchỉ đừng có về nhà.
Dialogue: 0,1:25:10.69,1:25:12.35,Phim,,0000,0000,0000,,Chúa chết.
Dialogue: 0,1:25:13.19,1:25:14.44,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,1:25:16.36,1:25:17.48,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,1:25:19.61,1:25:22.11,Phim,,0000,0000,0000,,{\i1}Đây là Daniel Brenner.\NXin để lại lời nhắn sau tiếng bíp.{\i0}
Dialogue: 0,1:25:22.20,1:25:24.66,Phim,,0000,0000,0000,,Brenner, ông ở đâu?!\NGã đó còn sống!
Dialogue: 0,1:25:24.74,1:25:26.79,Phim,,0000,0000,0000,,Hắn vừa gọi tôi!\NHắn vẫn còn sống!
Dialogue: 0,1:25:27.74,1:25:28.75,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,1:25:31.66,1:25:34.42,Phim,,0000,0000,0000,,Họ không tìm thấy chúng.\NHọ không thể.
Dialogue: 0,1:25:35.50,1:25:38.55,Phim,,0000,0000,0000,,Hết cách rồi.\NKhông không không.
Dialogue: 0,1:25:38.76,1:25:41.22,Phim,,0000,0000,0000,,Họ không thể thấy chúng.
Dialogue: 0,1:25:48.52,1:25:49.77,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,1:25:55.86,1:25:57.82,Phim,,0000,0000,0000,,{\i1}Tên tôi là Pamela Lutti.{\i0}
Dialogue: 0,1:25:58.61,1:26:01.65,Phim,,0000,0000,0000,,{\i1}Tôi là nhân viên dịch vụ\Nthức ăn của FOB Anaconda{\i0}
Dialogue: 0,1:26:01.99,1:26:04.78,Phim,,0000,0000,0000,,{\i1}thuộc công ty\N'Crestin, Roland and Thomas'.{\i0}
Dialogue: 0,1:26:06.16,1:26:08.20,Phim,,0000,0000,0000,,{\i1}Yêu cầu tiền chuộc tôi\Nvẫn chưa được đáp ứng.{\i0}
Dialogue: 0,1:26:08.28,1:26:10.20,Phim,,0000,0000,0000,,{\i1}Xin đừng!{\i0}
Dialogue: 0,1:26:16.75,1:26:17.88,Phim,,0000,0000,0000,,Mẹ kiếp.
Dialogue: 0,1:27:46.76,1:27:49.76,Phim,,0000,0000,0000,,- Quanh đây thôi!\N- Chuyển đi!
Dialogue: 0,1:27:49.84,1:27:51.18,Phim,,0000,0000,0000,,Thấy rồi! Chuyển đi	!
Dialogue: 0,1:27:52.06,1:27:54.35,Phim,,0000,0000,0000,,Lùi lại!\NMọi người lùi lại!
Dialogue: 0,1:27:55.27,1:27:58.44,Phim,,0000,0000,0000,,Đã tìm được người.
Dialogue: 0,1:27:58.52,1:28:00.69,Phim,,0000,0000,0000,,Anh không sao chứ?\NTrả lời tôi đi.
Dialogue: 0,1:28:00.77,1:28:02.73,Phim,,0000,0000,0000,,{\i1}Paul. Anh có sao không?{\i0}
Dialogue: 0,1:28:21.04,1:28:22.04,Phim,,0000,0000,0000,,Vâng?
Dialogue: 0,1:28:22.13,1:28:23.96,Phim,,0000,0000,0000,,Paul, Brenner đây.
Dialogue: 0,1:28:24.55,1:28:27.42,Phim,,0000,0000,0000,,- Anh có đó không Paul?\N- Tôi đây.
Dialogue: 0,1:28:27.51,1:28:30.59,Phim,,0000,0000,0000,,{\i1}Chúng tôi đến chỗ anh đây.\NNghe rõ không? Chúng tôi biết chỗ anh rồi.{\i0}
Dialogue: 0,1:28:30.68,1:28:31.97,Phim,,0000,0000,0000,,- Đang đến?\N- Phải, Paul.
Dialogue: 0,1:28:32.05,1:28:34.31,Phim,,0000,0000,0000,,- Chúng tôi gần tới rồi.\N- Sao ông biết?
Dialogue: 0,1:28:34.39,1:28:37.73,Phim,,0000,0000,0000,,{\i1}Quân đội liên minh bắt được\Nphiến quân Shiite ngoài Baghdad.{\i0}
Dialogue: 0,1:28:37.81,1:28:39.85,Phim,,0000,0000,0000,,{\i1}Nói là hắn biết chỗ\Nngười Mỹ bị chôn sống.{\i0}
Dialogue: 0,1:28:39.94,1:28:41.94,Phim,,0000,0000,0000,,{\i1}Hắn chịu chỉ cho chúng tôi\Nđịa điểm nếu thả hắn đi.{\i0}
Dialogue: 0,1:28:42.02,1:28:44.48,Phim,,0000,0000,0000,,- Ông đang đến cứu tôi?\N- Gần đến đó rồi.
Dialogue: 0,1:28:44.57,1:28:46.53,Phim,,0000,0000,0000,,- Ông phải nhanh lên.\N- Nhanh đây Paul.
Dialogue: 0,1:28:46.61,1:28:48.82,Phim,,0000,0000,0000,,Ông phải mau lên.\NCát... Cát
Dialogue: 0,1:28:48.90,1:28:50.70,Phim,,0000,0000,0000,,{\i1}Cố chịu đựng thêm 3 phút nữa.{\i0}
Dialogue: 0,1:28:50.78,1:28:52.74,Phim,,0000,0000,0000,,{\i1}Sẽ sớm kết thúc thôi.\NTôi hứa đấy.{\i0}
Dialogue: 0,1:28:52.82,1:28:54.33,Phim,,0000,0000,0000,,Được rồi. Tôi tin ông.
Dialogue: 0,1:28:54.41,1:28:57.06,Phim,,0000,0000,0000,,{\i1}3 phút thôi, Paul.\NCố chịu thêm 3 phút nữa.{\i0}
Dialogue: 0,1:28:57.06,1:28:57.98,Phim,,0000,0000,0000,,Cảm ơn ông.
Dialogue: 0,1:28:57.98,1:28:59.08,Phim,,0000,0000,0000,,{\i1}Sẽ sớm kết thúc thôi.\NTôi hứa đấy.{\i0}
Dialogue: 0,1:28:59.16,1:29:01.67,Phim,,0000,0000,0000,,- Tôi phải đi. Gọi lại ông sau.\N- Không! Paul, Paul, Paul!
Dialogue: 0,1:29:01.75,1:29:04.17,Phim,,0000,0000,0000,,- Gọi tôi sau, xin ông đấy!\N- Không đợi đã, Paul!
Dialogue: 0,1:29:05.42,1:29:07.76,Phim,,0000,0000,0000,,Linda! Linda!
Dialogue: 0,1:29:07.88,1:29:10.22,Phim,,0000,0000,0000,,{\i1}Paul? Paul, anh phải không?{\i0}
Dialogue: 0,1:29:10.30,1:29:12.22,Phim,,0000,0000,0000,,- Nói là anh đi.\N- Anh đây.
Dialogue: 0,1:29:12.30,1:29:14.64,Phim,,0000,0000,0000,,{\i1}Ôi Chúa ơi, Paul!\NChúng đã làm gì anh vậy?{\i0}
Dialogue: 0,1:29:14.72,1:29:16.76,Phim,,0000,0000,0000,,- Nói em biết là anh vẫn ổn.\N- Anh vẫn ổn.
Dialogue: 0,1:29:16.85,1:29:19.31,Phim,,0000,0000,0000,,{\i1}Em mới xem được tin.\NEm để điện thoại ở nhà.{\i0}
Dialogue: 0,1:29:19.39,1:29:21.06,Phim,,0000,0000,0000,,Họ biết anh ở đâu.\NHọ đang tới cứu anh.
Dialogue: 0,1:29:21.14,1:29:23.02,Phim,,0000,0000,0000,,Người Mỹ đang\Nđến cứu anh.
Dialogue: 0,1:29:23.10,1:29:24.77,Phim,,0000,0000,0000,,- Họ sẽ?\N- Sẽ ổn thôi.
Dialogue: 0,1:29:24.86,1:29:26.98,Phim,,0000,0000,0000,,Ôi tạ ơn Chúa.
Dialogue: 0,1:29:27.86,1:29:30.36,Phim,,0000,0000,0000,,Họ đang trên đường đến.\NSẽ ổn thôi.
Dialogue: 0,1:29:30.45,1:29:32.53,Phim,,0000,0000,0000,,Em cứ sợ\Nlà sẽ mất anh.
Dialogue: 0,1:29:32.61,1:29:34.12,Phim,,0000,0000,0000,,- Không đâu.\N- Em yêu anh nhiều lắm.
Dialogue: 0,1:29:34.20,1:29:36.41,Phim,,0000,0000,0000,,- Em yêu anh nhiều lắm.\N- Anh cũng yêu em nhiều lắm.
Dialogue: 0,1:29:36.49,1:29:39.45,Phim,,0000,0000,0000,,Anh xin lỗi.\NLẽ ra anh không nên tới đây.
Dialogue: 0,1:29:39.54,1:29:40.83,Phim,,0000,0000,0000,,Lẽ ra anh phải nghe em.\NAnh xin lỗi.
Dialogue: 0,1:29:40.91,1:29:44.29,Phim,,0000,0000,0000,,{\i1}Em không cần.\NEm chỉ muốn anh mau quay về.</i?{\i0}
Dialogue: 0,1:29:44.38,1:29:46.17,Phim,,0000,0000,0000,,Anh sẽ về.
Dialogue: 0,1:29:46.25,1:29:47.42,Phim,,0000,0000,0000,,- Thề đi.\N- Anh thề.
Dialogue: 0,1:29:47.50,1:29:50.09,Phim,,0000,0000,0000,,- Anh thề anh sẽ về.\N- Em yêu anh, rất nhiều.
Dialogue: 0,1:29:50.17,1:29:51.38,Phim,,0000,0000,0000,,Anh biết.
Dialogue: 0,1:29:52.43,1:29:54.14,Phim,,0000,0000,0000,,- Họ đến rồi.\N- Được rồi.
Dialogue: 0,1:29:54.22,1:29:55.89,Phim,,0000,0000,0000,,Họ đến rồi!\NAnh phải đi đây.
Dialogue: 0,1:29:55.97,1:29:57.89,Phim,,0000,0000,0000,,- Gọi lại cho em ngay.\N- Anh hứa.
Dialogue: 0,1:29:57.97,1:30:00.10,Phim,,0000,0000,0000,,- Anh yêu em.\N- Em yêu anh. Thề đi.
Dialogue: 0,1:30:00.18,1:30:01.56,Phim,,0000,0000,0000,,- Anh yêu em nhiều.\N- Thề lần nữa đi.
Dialogue: 0,1:30:01.64,1:30:03.27,Phim,,0000,0000,0000,,Anh thề.\NAnh phải đi đây.
Dialogue: 0,1:30:03.35,1:30:05.19,Phim,,0000,0000,0000,,- Mau về với em.\N- Anh yêu em.
Dialogue: 0,1:30:05.27,1:30:06.86,Phim,,0000,0000,0000,,- Dan?\N- Mau lên! Mau lên!
Dialogue: 0,1:30:06.94,1:30:09.07,Phim,,0000,0000,0000,,- Brenner?\N- Paul? Paul? Chúng tôi đây!
Dialogue: 0,1:30:09.15,1:30:11.53,Phim,,0000,0000,0000,,- Tôi đây.\N- Hắn đưa chúng tôi tới đây.
Dialogue: 0,1:30:12.49,1:30:14.74,Phim,,0000,0000,0000,,Ông phải mau lên.\NSắp đầy rồi.
Dialogue: 0,1:30:14.82,1:30:16.41,Phim,,0000,0000,0000,,Paul, cố lên.\NChúng tôi ngay trên anh rồi.
Dialogue: 0,1:30:16.49,1:30:18.74,Phim,,0000,0000,0000,,Tôi không thể.\NÔng gần tới?
Dialogue: 0,1:30:18.87,1:30:19.91,Phim,,0000,0000,0000,,- Sắp rồi!\N- Gần tới?
Dialogue: 0,1:30:19.99,1:30:21.16,Phim,,0000,0000,0000,,Sắp rồi! Ngay trên.
Dialogue: 0,1:30:21.25,1:30:23.16,Phim,,0000,0000,0000,,- Tôi không nghe rõ.\N- Đào tiếp đi!
Dialogue: 0,1:30:23.25,1:30:25.75,Phim,,0000,0000,0000,,- Tôi nghe không rõ! Ông ở đâu?\N- Sắp rồi!
Dialogue: 0,1:30:26.96,1:30:29.84,Phim,,0000,0000,0000,,- Đào đi! Đã thấy quan tài.\N- Đúng rồi, đào tiếp...
Dialogue: 0,1:30:29.92,1:30:32.05,Phim,,0000,0000,0000,,- Cố lên!\N- Xin mở nó ra đi!
Dialogue: 0,1:30:32.13,1:30:33.93,Phim,,0000,0000,0000,,Mau lên! Mau nữa lên!
Dialogue: 0,1:30:34.01,1:30:35.89,Phim,,0000,0000,0000,,- Mau lên!\N- Được rồi!
Dialogue: 0,1:30:35.97,1:30:37.47,Phim,,0000,0000,0000,,Khốn kiếp, mau lên!
Dialogue: 0,1:30:37.85,1:30:39.18,Phim,,0000,0000,0000,,Mau lên!
Dialogue: 0,1:30:40.64,1:30:42.10,Phim,,0000,0000,0000,,{\i1}Ôi Chúa ơi!{\i0}
Dialogue: 0,1:30:43.06,1:30:44.89,Phim,,0000,0000,0000,,- Sao vậy?\N- Ôi Chúa ơi!
Dialogue: 0,1:30:45.69,1:30:49.19,Phim,,0000,0000,0000,,- Tôi xin lỗi, Paul.\N- Sao... Gì cơ?
Dialogue: 0,1:30:49.27,1:30:50.86,Phim,,0000,0000,0000,,Đó là Mark White.
Dialogue: 0,1:30:51.57,1:30:53.69,Phim,,0000,0000,0000,,{\i1}Hắn dẫn bọn tôi\Nđến Mark White.{\i0}
Dialogue: 0,1:30:54.11,1:30:55.86,Phim,,0000,0000,0000,,Ôi Chúa ơi.
Dialogue: 0,1:30:56.86,1:30:58.91,Phim,,0000,0000,0000,,- Tôi rất xin lỗi.\N- Được rồi.
Dialogue: 0,1:31:00.16,1:31:02.20,Phim,,0000,0000,0000,,Được rồi. Chúa ơi.
Dialogue: 0,1:31:09.96,1:31:13.05,Phim,,0000,0000,0000,,{\i1}Tôi rất tiếc, Paul.\NTôi rất tiếc.{\i0}
