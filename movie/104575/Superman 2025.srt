<script>
  function replaceExt(name, ext) {
    return name.substr(0, name.length - 3) + ext;
  }

  document.getElementById('form').onsubmit = function () {
    var file = document.getElementById('file')
    var name = file.value.match(/[^(\\|\/)]+\.(zip|ass|ssa)$/i);
    if (name == null) {
      alert("您必須選擇一個以 .ass、.ssa 或 .zip 為後綴的文檔");
      return false;
    }
    if (name[1] == 'zip')
      name = replaceExt(name[0], 'srt.zip');
    else
      name = replaceExt(name[0], 'srt');
    document.getElementById('form').action = 'convert/' + encodeURIComponent(name);
  }
</script>


